@model Lunggo.CustomerWeb.Models.OccupancyModel

<div class="room-item">
    <div class="panel-heading">
        <div class="panel-title">Kamar @(Model.Order + 1)</div>
    </div>
    <div class="panel-body">
        <div class="row clearfix">
            <div class="col-xs-4">
                <div class="form-group form-group-default input-custom">
                    <label class="label-custom">Dewasa</label>
                    <select class="cs-select cs-skin-slide occ-adult-@Model.Order" data-init-plugin="cs-select" ng-model="hotelSearch.occupancies['@Model.Order'].adultCount">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
            </div>
            <div class="col-xs-4">
                <div class="form-group form-group-default">
                    <label class="label-custom">Anak-anak</label>
                    <select class="cs-select cs-skin-slide occ-child-@Model.Order" data-init-plugin="cs-select" ng-model="hotelSearch.occupancies['@Model.Order'].childCount">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                    </select>
                </div>
            </div>

            <div class="col-xs-4" ng-show="hotelSearch.occupancies[@Model.Order].childCount > 0">
                <div class="form-group form-group-default" ng-show="hotelSearch.occupancies[@Model.Order].childCount >= 1">
                    <label class="label-custom">Umur Anak ke-1</label>
                    <select class="cs-select cs-skin-slide occ-age-@Model.Order-0" data-init-plugin="cs-select" ng-model="hotelSearch.occupancies['@Model.Order'].childrenAges[0]">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                    </select>
                </div>
                <div class="form-group form-group-default" ng-show="hotelSearch.occupancies[@Model.Order].childCount >= 2">
                    <label class="label-custom">Umur Anak ke-2</label>
                    <select class="cs-select cs-skin-slide occ-age-@Model.Order-1" data-init-plugin="cs-select" ng-model="hotelSearch.occupancies['@Model.Order'].childrenAges[1]">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                    </select>
                </div>
                <div class="form-group form-group-default" ng-show="hotelSearch.occupancies[@Model.Order].childCount >= 3">
                    <label class="label-custom">Umur Anak ke-3</label>
                    <select class="cs-select cs-skin-slide occ-age-@Model.Order-2" data-init-plugin="cs-select" ng-model="hotelSearch.occupancies['@Model.Order'].childrenAges[2]">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                    </select>
                </div>
                <div class="form-group form-group-default" ng-show="hotelSearch.occupancies[@Model.Order].childCount >= 4">
                    <label class="label-custom">Umur Anak ke-4</label>
                    <select class="cs-select cs-skin-slide occ-age-@Model.Order-3" data-init-plugin="cs-select" ng-model="hotelSearch.occupancies['@Model.Order'].childrenAges[3]">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>