<div class="price-slider-flight container">
    <div class="price-slider-title os-bold">PERKIRAAN HARGA (mulai dari):</div>
    <div id="myCarousel" class="ps-carousel carousel slide" data-interval="false" ng-show="ready">
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <div class="price-slider-container">
                    <div class="clearfix">
                        <div ng-repeat="harga in weeklyPrice" class="ps-item blue-txt clearfix">
                            <div class="ps-content semibold-txt clearfix"  ng-click="goto(harga.url)">
                                <div class="ps-date normal-txt">{{harga.date}}</div>
                                <div class="ps-price normal-txt" ng-show="harga.price != '0'">
                                    <span>Rp</span><br />
                                    <span class="md-txt">{{harga.price | currency:'':0}}</span>
                                </div>
                            </div>
                            <div class="ps-title">{{harga.day}}</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="price-slider-container">
                    <div class="clearfix">
                        <div ng-repeat="harga in weeklyPrice" class="ps-item blue-txt clearfix">
                            <div class="ps-content semibold-txt clearfix" ng-click="goto(harga.url)">
                                <div class="ps-date normal-txt">{{harga.date}}</div>
                                <div class="ps-price normal-txt" ng-show="harga.price != '0'">
                                    <span>Rp</span><br />
                                    <span class="md-txt">{{harga.price | currency:'':0}}</span>
                                </div>
                            </div>
                            <div class="ps-title">{{harga.day}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" ng-click ="prev()">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" ng-click="next()">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>