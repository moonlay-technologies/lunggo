<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Travorama</title>

    <!-- stylesheets -->
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="assets/css/application.css">

</head>
<body>


    <!-- page start -->
    <div class="page home-page">

        <!-- site header start -->
        <header id="site-header" class="site-header home-header">
            <nav class="main-menu">
                <div class="container">
                    <div class="row">

                        <div class="col-sm-12">
                            <ul class="list-inline">
                                <li class="site-logo pull-left"><a href="#"><img src="/assets/images/logo.png" alt="Travorama"></a></li>
                                <li><a href="#"><span class="fa fa-building"></span> Hotel</a></li>
                                <li><a href="#"><span class="fa fa-plane"></span> Flight</a></li>
                                <li><a href="#"><span class="fa fa-tag"></span> Promotion</a></li>
                                <li><a href="#"><span class="fa fa-question-circle"></span> FAQ</a></li>
                                <li class="pull-right site-login"><a href="#">Login</a> | <a href="#">Register</a></li>
                            </ul>
                        </div>

                    </div>
                </div>
            </nav>
            <section class="header-form">
                <section class="hotel-form">
                    <section class="site-tag">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1><img src="assets/images/enjoy.png" alt="Enjoy Your Every Moment"><br />However you like to travel, we have 3.693 hotels in 195 countries all at seriously cheap prices!</h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="search">
                        <section class="search-hotel">
                            <div class="container wide">
                                <div class="row">
                                    <div class="col-sm-12" >

                                        <form action="#" class="form-inline search-hotel-form" ng>
                                            <div class="form-group loc-auto-wrapper">
                                                <span class="fa fa-building	"></span> <input type="text" ng-model="HotelSearchParams.LocationId" class="form-control input-location" placeholder="Start here. Enter Hotel Location">
                                                <div class="loc-auto">
                                                    <ul></ul>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control input-checkin" placeholder="checkin">
                                            </div>
                                            <div class="form-group">
                                                <span class="form-dash">-</span>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control input-checkout" placeholder="checkout">
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control input-room" placeholder="room">
                                            </div>
                                            <div class="form-group">
                                                <button class="btn btn-primary btn-yellow">SEARCH</button>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </section>
                        <div class="search-flight"></div>
                    </section>
                </section><!-- .hotel-form -->
            </section><!-- .header-form -->
        </header>
        <!-- site header end -->
        <!-- site content start -->
        <div id="site-content" class="site-content">

            @RenderBody()

        </div>
        <!-- site content end -->
        <!-- site footer start -->
        <footer id="site-footer" class="site-footer">
            <section class="footer-menu">
                <div class="container">
                    <div class="row">

                        <div class="col-sm-6">

                            <div class="row">
                                <div class="col-sm-4">
                                    <h4>Tentang Kami</h4>
                                    <ul>
                                        <li><a href="#">Sejarah</a></li>
                                        <li><a href="#">Blog</a></li>
                                        <li><a href="#">Syarat &amp; Ketentuan</a></li>
                                        <li><a href="#">Kebijakan &amp; privasi</a></li>
                                    </ul>
                                </div>
                                <div class="col-sm-4">
                                    <h4>Penawaran</h4>
                                    <ul>
                                        <li><a href="#">Hotel</a></li>
                                        <li><a href="#">Mitra Kami</a></li>
                                        <li><a href="#">Program Perjalanan</a></li>
                                    </ul>
                                </div>
                                <div class="col-sm-4">
                                    <h4>Kontak</h4>
                                    <ul>
                                        <li><a href="#">Lokasi</a></li>
                                        <li><a href="#">Email</a></li>
                                        <li><a href="#">Social Media</a></li>
                                        <li><a href="#">Maps</a></li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                        <div class="col-sm-5 col-sm-offset-1">
                            <h4>Subscribe Email</h4>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequuntur odit fugit, harum, voluptas distinctio ratione enim ipsum.</p>
                            <form action="#" class="form subscribe-form">
                                <div class="form-group">
                                    <input type="text" placeholder="Email address" class="form-control no-radius">
                                </div>
                                <div class="form-group text-right">
                                    <button class="btn btn-primary no-radius">SUBSCRIBE</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </section>
            <section class="footer-copyright">
                <div class="container">
                    <div class="row">

                        <div class="col-sm-12">

                            <div class="text-center footer-socialmedia">
                                <a href="#" class="fa fa-instagram"></a>
                                <a href="#" class="fa fa-facebook"></a>
                                <a href="#" class="fa fa-pinterest"></a>
                                <a href="#" class="fa fa-youtube"></a>
                            </div>
                            <p class="text-center">
                                Copyright 2014 - Travelmadezy. All Rights Reserved.
                            </p>

                        </div>

                    </div>
                </div>
            </section>
        </footer>
        <!-- site footer end -->

    </div>
    <!-- page end -->
    <!-- javascripts -->
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/jquery.cycle2.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

    <script src="/assets/js/application.js"></script>

</body>
</html>
