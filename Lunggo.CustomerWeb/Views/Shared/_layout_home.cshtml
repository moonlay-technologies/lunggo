                    </div>

                </div>
            </div>
        </section>
        <section class="footer-copyright">
            <div class="container">
                <div class="row">

                    <div class="col-sm-12">

                        <div class="text-center footer-socialmedia">
                            <a href="#" class="fa fa-instagram"></a>
                            <a href="#" class="fa fa-facebook"></a>
                            <a href="#" class="fa fa-pinterest"></a>
                            <a href="#" class="fa fa-youtube"></a>
                        </div>
                        <p class="text-center">
                            Copyright 2014 - Travelmadezy. All Rights Reserved.
                        </p>

                    </div>

                </div>
            </div>
        </section>
    </footer>
    <!-- site footer end -->
    <!-- javascripts -->
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/jquery.cycle2.min.js"></script>

    <script src="/Assets/js/angular.min.js"></script>
    <script src="/Assets/js/angular-route.min.js"></script>
    
    <script src="/Assets/js/jquery.range-min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

    <script src="/Assets/js/jquery.pickmeup.min.js"></script>
    <script src="/assets/js/jquery.pickmeup.twitter-bootstrap.min.js"></script>
    
    <script src="/assets/js/_prod_cfg.js"></script>
    <script src="/assets/js/application.js"></script>

    <script>
        $('#flight-search').click(function (evt) {
            evt.preventDefault();
            var info = function () {
                var s = "";
                var ori = $('#flight-origin').val();
                var dest = $('#flight-destination').val();
                var date = $('#flight-date').val();
                s = s.concat(ori, dest, date.substring(0, 2), date.substring(3, 5), date.substring(8, 10));
                if ($('#return-flight').prop('checked')) {
                    var ori2 = $('#flight-destination').val();
                    var dest2 = $('#flight-origin').val();
                    var date2 = $('#flight-return-date').val();
                    s = s.concat('.', ori2, dest2, date2.substring(0, 2), date2.substring(3, 5), date2.substring(8, 10));
                }
                var cabin = 'y';
                var adult = $('#flight-adult').val();
                var child = $('#flight-child').val();
                var infant = $('#flight-infant').val();
                s = s.concat('-', adult, child, infant, cabin);
                return s;
            }
            $('#flight-info').val(info);
            $(this).closest('form').submit();
        })
    </script>

</body>
</html>
