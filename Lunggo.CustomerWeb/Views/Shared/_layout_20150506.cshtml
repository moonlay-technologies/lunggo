<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link rel="shortcut icon" type="image/ico" href="/Assets/images/favico.ico" />

    <title>Travorama</title>

    <!-- stylesheets -->
    <link rel="stylesheet" href="/Assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Assets/css/jquery-ui.min.css"/>
    <link rel="stylesheet" href="/Assets/css/font-awesome.min.css">
    @if (IsSectionDefined("AdditionalPageCSS"))
    {
        @RenderSection("AdditionalPageCSS");
    }
    <link rel="stylesheet" href="/Assets/css/application.min.css">

</head>
<body ng-app="travorama" class="page @ViewBag.BodyClass">
@{ Html.RenderPartial("_googleTag"); }


    <header id="site-header" class="site-header home-header" data-activeTab="hotel">
        @{ Html.RenderPartial("_Mainmenu"); }
    
        @if (ViewBag.ShowTagline == true)
        {
            <div class="container">
                <div class="site-slogan">
                    <h1><img src="/Assets/images/enjoy.png" alt="Enjoy Your Every Moment"></h1>
                    <h2>@Html.I18NString("CW00068")</h2>
                </div><!-- .site-slogan -->
            </div>
        }
    
        @if (ViewBag.ShowHeaderForm == true)
        {
            <div class="container">
                <div class="site-header-search-form">
                    <div class="form-switch">
                        <div class="switch">
                            <label class="label-hotel" data-target="hotel"><span class="hotel-image"></span><input type="radio" name="form-switch" value="hotel" /></label>
                            <label class="active label-flight" data-target="flight"><span class="flight-image"></span><input type="radio" name="form-switch" value="flight" /></label>
                        </div>
                    </div><!-- .form-switch -->
                    <div class="form-main-content">
                        <div class="form-hotel-search">
                            <h3><b>Hotel</b> Booking</h3>
                            <form action="/UW100/UW100HotelSearch" method="GET" class="homepage-form">
                                <div class="hotel-location-wrapper form-group">
                                    <input type="text" class="hotel-location autocomplete" placeholder="Location" />
                                </div>
                                <div class="hotel-data-wrapper form-group">
                                    <input type="text" class="hotel-checkin date-picker" placeholder="Checkin Date"/>
                                    <input type="text" class="hotel-checkout date-picker" placeholder="Checkout Date"/>
                                    <!-- <input type="text" class="hotel-room" placeholder="Rooms"/> -->
                                    <select class="hotel-room" name="RoomCount">
                                        <option value="1">1 Room</option>
                                        <option value="2">2 Rooms</option>
                                        <option value="3">3 Rooms</option>
                                        <option value="4">4 Rooms</option>
                                    </select>
                                </div>
                                <div class="hotel-submit-wrapper form-group">
                                    <input type="text" class="hidden" name="LocationId" id="hotel-search-location" />
                                    <input type="text" class="hidden" name="StayDate" id="hotel-search-checkin" />
                                    <input type="text" class="hidden" name="StayLength" id="hotel-search-length" />
                                    <a class="submit-button btn btn-yellow">SEARCH</a>
                                </div>
                            </form><!-- .form-hotel-search -->
                        </div><!-- .form-hotel-search -->
                        <div class="form-flight-search active">
                            <h3>@Html.I18NString("CW00081")</h3>
                            <form action="@Url.Action("SearchResultList", "Flight")" class="homepage-form" method="GET" data-flighttype="round-trip">
                                <div class="flight-type-wrapper form-group">
                                    <label for="round-trip" class="active"><input type="radio" name="flight-type" value="RET" id="round-trip" checked /> @Html.I18NString("CW00052")</label>
                                    <label for="one-way"><input type="radio" name="flight-type" value="ONE" id="one-way" /> @Html.I18NString("CW00053")</label>
                                </div>
                                <div class="flight-airport-wrapper form-group">
                                    <input type="text" class="flight-origin autocomplete" placeholder="@Html.I18NString("CW00069")" data-userinputvalue="" data-airportcode="" />
                                    <input type="text" class="flight-destination autocomplete" placeholder="@Html.I18NString("CW00070")" data-userinputvalue="" data-airportcode="" />
                                </div>
                                <div class="flight-date-wrapper form-group">
                                    <input type="text" class="flight-departure-date date-picker" placeholder="@Html.I18NString("CW00016")" />
                                    <input type="text" class="flight-return-date date-picker" placeholder="@Html.I18NString("CW00058")" />
                                    <input type="text" class="flight-return-disable" placeholder="One way" disabled />
                                    <select class="flight-cabin" placeholder="Cabin">
                                        <option value="y">@Html.I18NString("CW00054")</option>
                                        <option value="c">@Html.I18NString("CW00055")</option>
                                        <option value="f">@Html.I18NString("CW00056")</option>
                                    </select>
                                </div>
                                <div class="flight-submit-wrapper form-group">
                                    <select class="flight-adult" placeholder="Adult">
                                        <option value="1">1 @Html.I18NString("CW00018")</option>
                                        <option value="2">2 @Html.I18NString("CW00059")</option>
                                        <option value="3">3 @Html.I18NString("CW00059")</option>
                                        <option value="4">4 @Html.I18NString("CW00059")</option>
                                        <option value="5">5 @Html.I18NString("CW00059")</option>
                                        <option value="6">6 @Html.I18NString("CW00059")</option>
                                        <option value="7">7 @Html.I18NString("CW00059")</option>
                                        <option value="8">8 @Html.I18NString("CW00059")</option>
                                        <option value="9">9 @Html.I18NString("CW00059")</option>
                                    </select>
                                    <select class="flight-child" placeholder="Child">
                                        <option value="0">0 @Html.I18NString("CW00019")</option>
                                        <option value="1">1 @Html.I18NString("CW00060")</option>
                                        <option value="2">2 @Html.I18NString("CW00019")</option>
                                        <option value="3">3 @Html.I18NString("CW00019")</option>
                                        <option value="4">4 @Html.I18NString("CW00019")</option>
                                        <option value="5">5 @Html.I18NString("CW00019")</option>
                                        <option value="6">6 @Html.I18NString("CW00019")</option>
                                        <option value="7">7 @Html.I18NString("CW00019")</option>
                                        <option value="8">8 @Html.I18NString("CW00019")</option>
                                    </select>
                                    <select class="flight-infant" placeholder="Infant">
                                        <option value="0">0 @Html.I18NString("CW00061")</option>
                                        <option value="1">1 @Html.I18NString("CW00020")</option>
                                        <option value="2">2 @Html.I18NString("CW00061")</option>
                                        <option value="3">3 @Html.I18NString("CW00061")</option>
                                        <option value="4">4 @Html.I18NString("CW00061")</option>
                                    </select>
                                    <input type="text" class="hidden flight-departure-date-real" value="" />
                                    <input type="text" class="hidden flight-return-date-real" value="" />
                                    <input type="text" class="hidden flight-origin-airport-real" value="" />
                                    <input type="text" class="hidden flight-destination-airport-real" value="" />
                                    <input type="text" id="flight-data-info" name="info" class="hidden" />
                                    <a class="submit-button flight-submit-button btn btn-yellow">@Html.I18NString("CW00080")</a>
                                </div>
                                <div class="passenger-warning">
                                    <p class="max-passenger">Maximum number of passenger is 9 person.</p>
                                    <p class="max-infant">Infant cannot be more than adult.</p>
                                </div>
                            </form><!-- .form-flight-search -->
                        </div><!-- .form-flight-search -->
                    </div><!-- .form-main-content -->
                </div><!-- .site-header-search-form -->
            </div>
        }
        

    </header><!-- .site-header -->

    <div id="site-content" class="site-content">
        @RenderBody()
    </div><!-- .site-content -->
    
    <footer id="site-footer" class="site-footer">
        @if (ViewBag.ShowSubscribeForm == true)
        {
            <section class="footer-subscribe">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-3">
                            <img src="/Assets/images/email-image.jpg" alt="Subscribe" />
                        </div>
                        <div class="col-sm-9">
                            <h3><b>@Html.I18NString("CW00075") </b> @Html.I18NString("CW00076")</h3>
                            <br />
                            <form class="form form-horizontal subscribe-form">
                                <div class="form-group">
                                    <div class="col-sm-4 col-md-5"><input type="text" class="form-control user-name" placeholder="@Html.I18NString("CW00077")" /></div>
                                    <div class="col-sm-4 col-md-5"><input type="text" class="form-control user-email" placeholder="@Html.I18NString("CW00078")" /></div>
                                    <div class="col-sm-4 col-md-2"><input type="submit" class="btn btn-yellow submit-button" value="@Html.I18NString("CW00079")" /></div>
                                </div>
                            </form>
                            <div class="subscribe-complete">
                                <p>Thank you for Subscribing to Travorama Email Newsletter.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- .footer-subscribe -->
        }
        @if (ViewBag.ShowPaymentInfo == true)
        {
            <section class="footer-payment">
                <div class="container">
                    <h2 class="section-title">@Html.I18NString("CW00083") <b>@Html.I18NString("CW00084")</b> @Html.I18NString("CW00085")</h2>
                    <br />
                    <img src="/Assets/images/payment-method.jpg" alt="Travorama Payment Method" />
                </div>
            </section>
            <!-- .footer-payment -->
        }
            <section class="footer-menu">
                <div class="container">
                    <div class="row">

                        <div class="col-sm-3">
                            <img src="/Assets/images/logo.png" alt="Travorama" />
                        </div>
                        <div class="col-sm-9">
                            <h2>@Html.I18NString("CW00153")</h2>
                            <nav>
                                <ul class="list-inline">
                                    <li><a href="@Url.Action("HowToBook", "Term")" target="_blank">@Html.I18NString("CW00151")</a></li>
                                    <li><a href="@Url.Action("PrivacyPolicy", "Term")" target="_blank">@Html.I18NString("CW00152")</a></li>
                                </ul>
                            </nav>
                        </div>

                    </div>
                </div>
            </section><!-- .footer-menu -->
        <section class="footer-copyright">
            <div class="container">
                <div class="row">

                    <div class="col-sm-12">

                        <div class="text-center footer-socialmedia">
                            <a href="http://facebook.com/travorama" class="fa fa-facebook"></a>
                            <a href="http://twitter.com/travoramaid" class="fa fa-twitter"></a>
                            <a href="http://instagram.com/travorama" class="fa fa-instagram"></a>
                        </div>
                        <p class="text-center">
                            Copyright 2014 - Travelmadezy. All Rights Reserved.
                        </p>

                    </div>

                </div>
            </div>
        </section><!-- .footer-copyright -->
    </footer><!-- .site-footer -->
    
    <div class="site-feedback">
        <a class="feedback-header">Feedback? klik disini</a>
        <div class="feedback-form">
            <form action="#" method="post" class="form form-horizontal">
                <div class="form-group">
                    <input type="type" name="name" value="" class="form-control" placeholder="Subject" />
                </div>
                <div class="form-group">
                    <textarea class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <a href="#" class="form-control">SUBMIT</a>
                </div>
            </form>
        </div>
    </div>

    <!-- ****************************** -->
    <!-- javascripts -->
    <script src="/Assets/js/jquery.min.js"></script>
    <script src="/Assets/js/jquery-ui.min.js"></script>

    <script src="/Assets/js/angular.min.js"></script>
    <script src="/Assets/js/angular-route.min.js"></script>

    @if (IsSectionDefined("AdditionalPageJavascript"))
    {
        @RenderSection("AdditionalPageJavascript");
    }

    <script src="/Config/JsConfig.js"></script>
    <script src="/Assets/js/application.js"></script>
    <script src="/Assets/js/angularApp.js"></script>

    @if (IsSectionDefined("PageJavascript"))
    {
        @RenderSection("PageJavascript");
    }


</body>
</html>
