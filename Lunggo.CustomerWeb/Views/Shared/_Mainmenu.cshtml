@using Lunggo.ApCommon.Identity.User
@using Lunggo.Framework.Http
@using Microsoft.AspNet.Identity
@using RazorEngine.Compilation.ImpromptuInterface.Optimization
@using Lunggo.Framework.Context
@using Lunggo.Framework.Constant

@{
    var topPageUrl = "~/";
    if (OnlineContext.GetActiveLanguageCode() == SystemConstant.EnglishLanguageCode)
    {
        topPageUrl = topPageUrl + SystemConstant.EnglishLanguageCode;
    }
}

<nav class="main-menu">
    <div class="container">
        <div class="row">

            <div class="col-sm-12">
                <ul class="list-inline">
                    <li class="site-logo pull-left"><a href="@Href(topPageUrl)"><img src="/assets/images/logo.png" alt="Travorama"></a></li>
                    <li class="hidden"><a href="@Href("~/")"><span class="fa fa-building"></span> Hotel</a></li>
                    <li><a href="@Href(topPageUrl)"><span class="fa fa-plane"></span> @Html.I18NString("CW00082")</a></li>
                    <li class="hidden"><a href="#"><span class="fa fa-tag"></span> Promotion</a></li>
                    <li class="hidden"><a href="#"><span class="fa fa-question-circle"></span> FAQ</a></li>
                    <li class="pull-right language-select">
                        <div class="dropdown">
                            <button class="" type="button" data-toggle="dropdown">
                                @if (OnlineContext.GetActiveLanguageCode() == SystemConstant.IndonesianLanguageCode)
                                {
                                    <img src="/Assets/images/flag-indonesia.png" alt="Bahasa Indonesia" />
                                }
                                else
                                {
                                    <img src="/Assets/images/flag-britain.png" alt="English" />
                                }
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="@Html.IdLangSwitcherUrl()">Indonesia</a></li>
                                <li><a href="@Html.EnLangSwitcherUrl()">English</a></li>
                            </ul>
                        </div>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="pull-right site-login"><a href="@Url.Action("OrderHistory", "UW620OrderHistory")">@Html.I18NString("CW00073")</a> | <a href="@Url.Action("Logout", "Account")">@Html.I18NString("CW00074")</a></li>
                    }
                    else
                    {
                        <li class="pull-right site-login"><a href="@Url.Action("Login", "Account")">@Html.I18NString("CW00071")</a> | <a href="@Url.Action("Register", "Account")">@Html.I18NString("CW00072")</a></li>
                    }
                </ul>
            </div>

        </div>
    </div>
</nav>