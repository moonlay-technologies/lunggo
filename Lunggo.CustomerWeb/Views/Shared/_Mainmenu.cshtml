<nav class="main-menu">
    <div class="container">
        <div class="row">

            <div class="col-sm-12">
                <ul class="list-inline">
                    <li class="site-logo pull-left"><a href="@Href("~/")"><img src="/assets/images/logo.png" alt="Travorama"></a></li>
                    <li><a href="@Href("~/")"><span class="fa fa-building"></span> Hotel</a></li>
                    <li><a href="#"><span class="fa fa-plane"></span> Flight</a></li>
