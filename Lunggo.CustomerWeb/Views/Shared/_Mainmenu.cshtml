@using Lunggo.ApCommon.Identity.User
@using Lunggo.Framework.Http
@using Microsoft.AspNet.Identity
@using RazorEngine.Compilation.ImpromptuInterface.Optimization
<nav class="main-menu">
    <div class="container">
        <div class="row">

            <div class="col-sm-12">
                <ul class="list-inline">
                    <li class="site-logo pull-left"><a href="@Href("~/")"><img src="/assets/images/logo.png" alt="Travorama"></a></li>
                    <li><a href="@Href("~/")"><span class="fa fa-building"></span> Hotel</a></li>
                    <li><a href="#"><span class="fa fa-plane"></span> Flight</a></li>
                    <li class="hidden"><a href="#"><span class="fa fa-tag"></span> Promotion</a></li>
                    <li class="hidden"><a href="#"><span class="fa fa-question-circle"></span> FAQ</a></li>
                    <li class="pull-right language-select">
                        <img src="/Assets/images/flag-indonesia.png" alt="Bahasa Indonesia" />
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @Html.BeginForm("LogOff", "Account", FormMethod.Post) { 
                            @Html.AntiForgeryToken()
                            <li class="pull-right site-login">Hi, @User.Identity.GetFirstName() <button type="submit" href="@Url.Action("LogOff", "Account")">(Logoff)</button></li>
                        }
                    }
                    else
                    {
                        <li class="pull-right site-login"><a href="@Url.Action("Login", "Account")">Login</a> | <a href="@Url.Action("Register", "Account")">Register</a></li>
                    }
                </ul>
            </div>

        </div>
    </div>
</nav>