    @if (IsSectionDefined("AdditionalCSS"))
    {
        @RenderSection("AdditionalCSS");
    }

    <link rel="stylesheet" href="/Assets/css/common.css">
    <link rel="stylesheet" href="/Assets/mobile/css/style_mobile.css">
    <style>
        body {
            padding-top: 0px;
        }
