@using System.Globalization
@using Lunggo.ApCommon.Constant
@using Lunggo.ApCommon.Flight.Constant
@using Lunggo.ApCommon.Payment.Constant
@using Lunggo.Framework.Config
@using Lunggo.ApCommon.Flight.Model
@model Lunggo.ApCommon.Flight.Model.FlightReservationForDisplay

@{
    Layout = "/Views/Shared/mobile/_Layout.cshtml";
    ViewBag.Title = "Terima Kasih";
    ViewBag.BodyClass = "page-thankyou";
}

@{
    var timeout = ConfigManager.GetInstance().GetConfigValue("flight", "paymentTimeout");
    var a = PaymentStatus.Undefined;
    var dep = Model.Itinerary.Trips[0];
    var ret = Model.Itinerary.Trips[0];
    if (Model.Itinerary.Trips.Count > 1)
    {
        ret = Model.Itinerary.Trips[1];
    }
}
@section AdditionalCSS {
    
    <link rel="stylesheet" href="/Assets/mobile/css/application.css">
}
<section class="page group-checkout group-flight-checkout ticket-page">
    
        @switch (Model.Payment.Status)
        {
            case PaymentStatus.Undefined:
            case PaymentStatus.Cancelled:
            case PaymentStatus.Expired:

                    <header class="page__header">
                        <h1 class="text-center section-title stripe">Transaksi <span>Gagal</span></h1>
                    </header>

                    <p>Belum ada reservasi. Silakan buat reservasi Anda.</p>
                    <a href="/" class="btn btn-yellow">Buat Reservasi</a>


                break;

            case PaymentStatus.Denied:


            <div class="container">

                <header class="page__header">
                    <h1 class="text-center section-title stripe">Transaksi <span>Ditolak</span></h1>
                </header>

                <p>Mohon maaf, pesanan dengan no. @Model.RsvNo telah ditolak. Silakan membuat pesanan baru.</p>     
        
                <p>Terima kasih atas Pemesanan Anda<p>

            </div>
                

                break;

            case PaymentStatus.Pending:

            <div class="container">
            
                <header class="page__header">
                    <h1 class="text-center section-title stripe"><span>Pembayaran</span></h1>
                </header>
            
                <p>Proses pembayaran Anda belum selesai. Mohon selesaikan pembayaran Anda dalam waktu 10 menit. Bila tidak, pesanan Anda akan dibatalkan.</p>
                <p>Nomor Virtual Account : @Model.Payment.TargetAccount</p>
            
            </div>
                        

                break;

            case PaymentStatus.Settled:
            case PaymentStatus.Verifying:

            <div class="container">
                <header class="page__header">
                    <h1 class="text-center section-title stripe">Terima <span>Kasih</span></h1>
                </header>
                <p>Terima kasih telah memesan penerbangan di Travorama. Anda dapat mencetak e-tiket Anda melalui tombol berikut atau mengunduhnya di e-mail Anda.</p>
                <div class="ticket-wrapper">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="ticket-print">
                                <a href="#" class="btn btn-yellow print-ticket-button"> <span class="fa fa-print"></span> Cetak e-tiket</a>
                                <p>Anda dapat menutup halaman ini dan mengecek kembali halaman ini di menu Cek Pemesanan setiap saat.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            break;
            
            
        }

        
    @if (Model.Payment.Status == PaymentStatus.Settled || Model.Payment.Status == PaymentStatus.Verifying)
    {
        <div class = "thankyou-review">
            <h3><b>DETAIL</b> PESANAN</h3>
            <h4>Nomor Reservasi: <b>@Model.RsvNo</b></h4>
            <div class="summary summary--passenger">
                <h3 class="summary__title"><b>DAFTAR</b> PENUMPANG</h3>
                <div class="summary__body">
                    <ol>
                        @foreach (var passenger in Model.Passengers)
                        {
                            <li>
                                <h4>
                                    <span>@passenger.Title</span>
                                    @passenger.FirstName @passenger.LastName
                                </h4>
                                <dl>
                                    <dt>Jenis Tiket</dt>
                                    <dd>@passenger.Type</dd>
                                </dl>

                            </li>
                        }
                    </ol>
                </div><!-- .summary__body -->
            </div><!-- .summary--passenger -->
            <div class="overlay--flight-detail">
                <div class="overlay__body overlay__content">
                    <div class=" flight-fare-wrapper">
                        <h3><b>RINCIAN</b> PENERBANGAN</h3>
                        <h4><b>BERANGKAT</b></h4>
                        <div class="flight-title flight-title--departure">
                            <div class="flight-info">
                                <h4><b>@dep.OriginAirport</b> ke <b>@dep.DestinationAirport</b></h4>
                                <h5>@dep.DepartureDate.ToString("ddd, d MMM yyyy")</h5>
                            </div><!-- .flight-info -->
                        </div><!-- .flight-title -->
                        @for (var segment = 0; segment < dep.Segments.Count; segment++)
                        {
                            <div class="flight-wrapper">
                                <div class="flight">
                                    <div class="flight__number">
                                        <span>@(segment + 1)</span>
                                    </div><!-- .flight__number -->
                                    <div class="flight__content">
                                        <div class="flight__summary">
                                            <img class="flight__image" src="@dep.Airlines[0].LogoUrl" alt="@dep.Airlines[0].Name">
                                            <div class="flight__airline">
                                                <h4><b>@dep.Airlines[0].Name</b></h4>
                                                <h5>@dep.Airlines[0].Code-@dep.Segments[segment].FlightNumber</h5>
                                            </div>
                                        </div><!-- .flight__summary -->
                                        <div class="flight__detail">
                                            <div class="flight__departure">
                                                <h5>@dep.Segments[segment].DepartureTime.ToString("d MMM yyyy")</h5>
                                                <h4><b>@dep.Segments[segment].DepartureTime.ToString("HH:mm")</b></h4>
                                                <h5><b>(@dep.Segments[segment].DepartureAirport) @dep.Segments[segment].DepartureCity</b></h5>
                                                <h5>@dep.Segments[segment].DepartureAirportName</h5>
                                            </div>
                                            <div class="flight__separator"></div>
                                            <div class="flight__arrival">
                                                <h5>@dep.Segments[segment].ArrivalTime.ToString("d MMM yyyy")</h5>
                                                <h4><b>@dep.Segments[segment].ArrivalTime.ToString("HH:mm")</b></h4>
                                                <h5><b>(@dep.Segments[segment].ArrivalAirport) @dep.Segments[segment].ArrivalCity</b></h5>
                                                <h5>@dep.Segments[segment].ArrivalAirportName</h5>
                                            </div><!-- .flight__arrival -->
                                        </div><!-- .flight__detail -->
                                    </div><!-- .flight__content -->
                                </div><!-- .flight -->
                                @if (dep.Transits.Count > 0 && segment < dep.TotalTransit)
                                {
                                    <div class="transit">
                                        <span>Transit di @dep.Transits.ElementAt(segment).Airport selama <b>@dep.Transits.ElementAt(segment).Duration</b></span>
                                    </div><!-- .transit -->
                                }
                            </div> <!-- .flight-wrapper -->
                        }

                    </div>
                </div>
            </div>

            @if(Model.Itinerary.Trips.Count > 1)
            {
            <div class="overlay--flight-detail">
                <div class="overlay__body overlay__content">
                    <div class=" flight-fare-wrapper">
                        <h4><b>KEMBALI</b></h4>
                        <div class="flight-title flight-title--departure">
                            <div class="flight-info">
                                <h4><b>@ret.OriginAirport</b> ke <b>@ret.DestinationAirport</b></h4>
                                <h5>@ret.DepartureDate.ToString("ddd, d MMM yyyy")</h5>
                            </div><!-- .flight-info -->
                        </div><!-- .flight-title -->
                        @for (var segment = 0; segment < ret.Segments.Count; segment++)
                        {
                            <div class="flight-wrapper">

                                <div class="flight">
                                    <div class="flight__number">
                                        <span>@(segment + 1)</span>
                                    </div><!-- .flight__number -->
                                    <div class="flight__content">
                                        <div class="flight__summary">
                                            <img class="flight__image" src="@ret.Airlines[0].LogoUrl" alt="@ret.Airlines[0].Name">
                                            <div class="flight__airline">
                                                <h4><b>@ret.Airlines[0].Name</b></h4>
                                                <h5>@ret.Airlines[0].Code-@ret.Segments[segment].FlightNumber</h5>
                                            </div>
                                        </div><!-- .flight__summary -->
                                        <div class="flight__detail">
                                            <div class="flight__departure">
                                                <h5>@ret.Segments[segment].DepartureTime.ToString("d MMM yyyy")</h5>
                                                <h4><b>@ret.Segments[segment].DepartureTime.ToString("HH:mm")</b></h4>
                                                <h5><b>(@ret.Segments[segment].DepartureAirport) @ret.Segments[segment].DepartureCity</b></h5>
                                                <h5>@ret.Segments[segment].DepartureAirportName</h5>
                                            </div>
                                            <div class="flight__separator"></div>
                                            <div class="flight__arrival">
                                                <h5>@ret.Segments[segment].ArrivalTime.ToString("d MMM yyyy")</h5>
                                                <h4><b>@ret.Segments[segment].ArrivalTime.ToString("HH:mm")</b></h4>
                                                <h5><b>(@ret.Segments[segment].ArrivalAirport) @ret.Segments[segment].ArrivalCity</b></h5>
                                                <h5>@ret.Segments[segment].ArrivalAirportName</h5>
                                            </div><!-- .flight__arrival -->
                                        </div><!-- .flight__detail -->
                                    </div><!-- .flight__content -->
                                </div><!-- .flight -->
                                @if (ret.Transits.Count > 0 && segment < ret.TotalTransit)
                                {
                                    <div class="transit">
                                        <span>Transit di @ret.Transits.ElementAt(segment).Airport selama <b>@ret.Transits.ElementAt(segment).Duration</b></span>
                                    </div><!-- .transit -->
                                }
                            </div> <!-- .flight-wrapper -->
                        }

                    </div>
                </div>
            </div>
            }
            <div class="summary summary--price">
                <h3 class="summary__title"><b>RINCIAN</b> HARGA</h3>
                <div class="summary__body">
                    <dl>
                        <dt>Tiket Pesawat @Model.Passengers.Count Penumpang</dt>
                        <dd>Rp @((Model.Payment.FinalPrice + Model.Discount + Model.TransferCode).ToString("##,###", CultureInfo.CreateSpecificCulture("id-ID")))</dd>
                    </dl>
                    @if (Model.Discount != 0)
                    {
                        <dl>
                            <dt>Potongan Harga</dt>
                            <dd>- Rp @Model.Discount.ToString("##,###", CultureInfo.CreateSpecificCulture("id-ID"))</dd>
                        </dl>
                    }
                    @if (Model.TransferCode != 0)
                    {
                        <dl>
                            <dt>Kode Unik Pembayaran</dt>
                            <dd>- Rp @Model.TransferCode.ToString("##,###", CultureInfo.CreateSpecificCulture("id-ID"))</dd>
                        </dl>
                    }
                    <dl class="total-price">
                        <dt>Total</dt>
                        <dd>Rp @Model.Payment.FinalPrice.ToString("##,###", CultureInfo.CreateSpecificCulture("id-ID"))</dd>
                    </dl>
                    
                </div><!-- .widget.price-detail -->
            </div><!-- .widget-container -->
            
            <div class="summary summary--price">
                <h3 class="summary__title"><b>METODE </b>PEMBAYARAN</h3>
                @switch (Model.Payment.Method)
                {
                    case PaymentMethod.CreditCard:
                        <h5>@EnumDisplay.PaymentMethod(Model.Payment.Method)</h5>
                        <img src="/Assets/images/payment-cc.jpg" alt="Credit Card" />
                        break;
                    case PaymentMethod.VirtualAccount:
                    <h5>@EnumDisplay.PaymentMethod(Model.Payment.Method)</h5>
                    <img src="/Assets/images/atm-bersama.jpg" alt="Virtual Account" />
                        break;
                    case PaymentMethod.BankTransfer:
                    <h5>@EnumDisplay.PaymentMethod(Model.Payment.Method)</h5>
                    <img src="/Assets/images/atm-bersama.jpg" alt="Bank Transfer" />
                        break;
                    case PaymentMethod.CimbClicks:
                    <img src="/Assets/images/cimb-clicks-transparan.png" alt="CIMB Clicks" />
                        break;
                    case PaymentMethod.MandiriClickPay:
                    <h5>@EnumDisplay.PaymentMethod(Model.Payment.Method)</h5>
                    <img src="/Assets/images/payment-mandiri.png" alt="Mandiri Click Pay" />
                        break;
                }

            </div>
            
            <div class="container">
                <small><i>Travorama selalu mementingkan keamanan transaksi Anda. Semua transaksi melalui Travorama.com dijamin 100% aman.</i></small>
            </div>
        </div>
        }
</section><!-- .checkout-page -->
