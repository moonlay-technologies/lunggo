                            <h5 class="airline-name"><img ng-src="@Model.Itinerary.FlightTrips[0].Airlines[0].LogoUrl" alt="@Model.Itinerary.FlightTrips[0].Airlines[0].Name" src="@Model.Itinerary.FlightTrips[0].Airlines[0].LogoUrl"> @Model.Itinerary.FlightTrips[0].Airlines[0].Name</h5>
                            <div class="trip-wrapper">
                                <div class="trip-origin">
                                    <span>Departure</span>
                                    <span class="time ng-binding">@Model.Itinerary.FlightTrips[0].FlightSegments.First().DepartureTime.ToString("hh:mm")</span>
                                    <span class="date ng-binding">@Model.Itinerary.FlightTrips[0].FlightSegments.First().DepartureTime.ToString("dd MMM yyyy")</span>
                                    <span class="airport ng-binding">@Model.Itinerary.FlightTrips[0].OriginAirport</span>
                                    <span class="city ng-binding">@Model.Itinerary.FlightTrips[0].OriginCity</span>
                                </div>
                                <div class="trip-destination">
                                    <span>Arrival</span>
                                    <span class="time ng-binding">@Model.Itinerary.FlightTrips[0].FlightSegments.Last().ArrivalTime.ToString("hh:mm")</span>
                                    <span class="date ng-binding">@Model.Itinerary.FlightTrips[0].FlightSegments.Last().ArrivalTime.ToString("dd MMM yyyy")</span>
