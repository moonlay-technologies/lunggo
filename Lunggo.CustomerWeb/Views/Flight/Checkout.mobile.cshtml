            <section class="container">
                <a class="btn btn-yellow btn-block-lg" onclick=" gotoPage(4) ">CHOOSE PAYMENT METHOD</a>
                <a class="btn btn-back" onclick=" gotoPage(2) ">BACK</a>
            </section>

        </section><!-- .checkout-page.step-3 -->
