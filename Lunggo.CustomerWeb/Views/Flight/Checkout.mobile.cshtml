                                    <div class="col-xs-12">
                                        <input type="text" name="Passengers[@i].PassportNumber" value="" class="form-control" placeholder="Passport Number" ng-model="flightPassengers[@i].passport" ng-change="passengersValidation()" />
                                    </div>
                                </div>
                                <div class="form-group">
