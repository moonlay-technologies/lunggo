                                <div class="trip-wrapper">
                                    <div class="trip-origin">
                                        <span>Departure</span>
                                        <span class="time ng-binding">@Model.Itinerary.FlightTrips[1].FlightSegments.First().DepartureTime.ToString("hh:mm")</span>
                                        <span class="date ng-binding">@Model.Itinerary.FlightTrips[1].FlightSegments.First().DepartureTime.ToString("dd MMM yyyy")</span>
                                        <span class="airport ng-binding">@Model.Itinerary.FlightTrips[1].OriginAirport</span>
                                        <span class="city ng-binding">@Model.Itinerary.FlightTrips[1].OriginCity</span>
                                    </div>
                                    <div class="trip-destination">
