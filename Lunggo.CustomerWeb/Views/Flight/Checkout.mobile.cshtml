                                        @Html.DropDownListFor(model => model.Passengers[i].BirthDate.Month, new SelectList(monthList, "Value", "Text"), new {@class = "form-control", ng_model = "flightPassengers[" + i + "].birthday.month", ng_init = "flightPassengers[" + i + "].birthday.month = '" + 1 + "'", ng_change = "passengersValidation()"})
                                    </div>
                                    <div class="col-xs-4">
                                        @Html.DropDownListFor(model => model.Passengers[i].BirthDate.Year, new SelectList(yearList, "Value", "Text"), new {@class = "form-control", ng_model = "flightPassengers[" + i + "].birthday.year", ng_init = "flightPassengers[" + i + "].birthday.year = '" + (DateTime.Now.Year - 120) + "'", ng_change = "passengersValidation()"})
                                    </div>
                                </div>
                            }
                            @if (needPassport)
