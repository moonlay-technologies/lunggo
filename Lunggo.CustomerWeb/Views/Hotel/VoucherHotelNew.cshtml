@{
    ViewBag.SiteHeader = "header-email";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" type="image/ico" href="/Assets/images/favico.ico" />

    <title>Travorama - eTicket</title>

    <!-- stylesheets -->
    <link rel="stylesheet" href="/Assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Assets/css/neweticket.css">
    <style>
        .black-txt {color: #000000;}
        .hotel-wrapper { width: 100%;}
        .hotel-wrapper .hotel-top {margin-top: 1cm;}
            .hotel-wrapper .hotel-middle {
                margin-top: 0.5cm;
            }
        .hotel-wrapper .hotel-bottom {
            margin-top: 0.5cm;
            border-top: 1px solid #ddd;
        }
            .hotel-wrapper .hotel-bottom .hotel-detail .row {
                margin-bottom: 0.25cm;
            }

    </style>
</head>
<body class="eticket">
    <div class="page">
        <header class="page-header">
            <div class="row">
                <div class="col-xs-4">
                    <img src="/Assets/images/travorama-logo-color.png" alt="Travorama" />
                </div>
                <div class="col-xs-8">
                    <div class="page-header-right pull-right">
                        <div class="page-title"><h3><span class="black-txt">HOTEL</span> VOUCHER</h3></div>
                    </div>
                </div>
            </div>
        </header>
        <section class="page-content">
            <div class="hotel-wrapper">
                <div class="hotel-top">
                    <p style="border-bottom: 2px solid #15b1e4; margin-bottom: 0.5cm;">
                        <img style="padding-right: 5px;" src="/Assets/images/phone.png" /><span style="color: #15b1e4;">021 1234 5678</span>
                        <img style="padding-right: 5px; padding-left: 15px;" src="/Assets/images/email/mail.png" /><span style="color: #15b1e4;">cs@travorama.com</span>
                    </p>
                    <img style="width: 100%" src="/Assets/images/voucher-hotel-bg.jpg" />
                </div>
                <div class="hotel-middle">
                    <div class="row">
                        <div class="col-xs-2">
                            <h4>Itinerary ID</h4>
                            <h4 style="color: #0c84b1;"><b>123456789</b></h4>
                        </div>
                        <div class="col-xs-10">
                            <div style="padding-left: 30px; border-left: 1px solid #ddd;">
                                <h4 style="text-transform: uppercase; color: #15b1e4;"><b>B hotel bali & spa</b></h4>
                                <p><img src="/Assets/images/hotel-star-4.png" /></p>
                                <p style="color: #525252;">
                                    <img src="/Assets/images/location.png" /> Jl. Imam Bonjol No 508, Denpasar,
                                    Denpasar, Indonesia 80119
                                </p>
                                <p style="color: #525252;">
                                    <img src="/Assets/images/phone.png" /> 0000 000000
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hotel-bottom">
                    <h3><b>BOOKING DETAILS</b></h3>
                    <div class="hotel-detail">
                        <div class="row">
                            <div class="col-xs-3">
                                <p style=""><b>Booking ID</b></p>
                            </div>
                            <div class="col-xs-9">
                                <p style="">: <b>123456789</b></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <p style=""><b>Guest Name</b></p>
                            </div>
                            <div class="col-xs-9">
                                <p style="">: <b>Anonymous</b></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3"></div>
                            <div class="col-xs-9">
                                <div class="hotel-booked">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <span style="color: #0c84b1;">Check-in from</span>
                                        </div>
                                        <div class="col-xs-3">
                                            <span style="">.........................</span>
                                        </div>
                                        <div class="col-xs-3">
                                            <span style="color: #0c84b1;">Check-out until</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <span style="color: #15b1e4; font-size: 15px;"><b>05 Nov 2016</b></span>
                                        </div>
                                        <div class="col-xs-3"></div>
                                        <div class="col-xs-3">
                                            <span style="color: #15b1e4; font-size: 15px;"><b>09 Nov 2016</b></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <span style="">14.00</span>
                                        </div>
                                        <div class="col-xs-3"></div>
                                        <div class="col-xs-3">
                                            <span style="">12.00</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <p style="color: #525252;">Guest per room</p>
                            </div>
                            <div class="col-xs-9">
                                <p style="">: 2 persons</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <p style="color: #525252;">Room Type</p>
                            </div>
                            <div class="col-xs-9">
                                <p style="">: Deluxe Room Only</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <p style="color: #525252;">Number of rooms</p>
                            </div>
                            <div class="col-xs-9">
                                <p style="">: 2</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <p style="color: #525252;">Include breakfast?</p>
                            </div>
                            <div class="col-xs-9">
                                <p style=""> : No</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <p style="color: #525252;">Special Request</p>
                            </div>
                            <div class="col-xs-9">
                                <p style="">: extra pillow</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <p style="color: #525252;">Includes</p>
                            </div>
                            <div class="col-xs-9">
                                <p style="">
                                    <span><img style="padding-right: 5px" src="/Assets/images/wifi.png" alt="Alternate Text" />Free Wifi</span>
                                    <span style="padding-left: 15px"><img style="padding-right: 5px" src="/Assets/images/swim.png" alt="Alternate Text" />Swimming Pool</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>