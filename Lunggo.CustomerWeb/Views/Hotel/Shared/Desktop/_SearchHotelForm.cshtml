<form class="hotel-form" name="hotel-form" @*ng-submit="FlightSearchForm.Submit()"*@ novalidate>
    <div class="th-form clearfix">
        <div class="clearfix">
            <div class="form-group form__hotel col-4">
                <input type="text" value="" class="change-hotel form-control" placeholder="Kota, Wilayah atau Nama Hotel" ng-model="changeParam.locationDisplay" ng-click="view.showHotelSearch = true">
            </div>
            <div class="col-6 clearfix">
                <div class="form-group form__date quarter">
                    <div class="field-container">
                        <div class="form-control form-date clearfix">
                            <div class="sm-txt col-half grey-txt">Check in</div>
                            <div class="col-half">
                                <span class="date semibold-txt darkgrey-txt">{{changeParam.checkinDateDisplay.split(' ')[0]}}</span>
                                <span class="sm-txt month darkgrey-txt bold-txt">{{changeParam.checkinDateDisplay.split(' ')[1].substring(0,3)}}</span>
                                <span class="sm-txt year darkgrey-txt bold-txt">{{changeParam.checkinDateDisplay.split(' ')[2]}}</span>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="form-group form__date quarter">
                    <div class="field-container">
                        <div class="form-control form-date">
                            <div class="sm-txt col-half grey-txt">Check out</div>
                            <div class="col-half">
                                <span class="date semibold-txt darkgrey-txt">{{changeParam.checkoutDateDisplay.split(' ')[0]}}</span>
                                <span class="sm-txt month darkgrey-txt bold-txt">{{changeParam.checkoutDateDisplay.split(' ')[1].substring(0,3)}}</span>
                                <span class="sm-txt year darkgrey-txt bold-txt">{{changeParam.checkoutDateDisplay.split(' ')[2]}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group form__night quarter">
                    <div class="field-container">
                        <div class="form-control form-night">
                            <div class="col-4"><span class="sm-txt grey-txt">Malam</span></div>
                            <div class="col-6 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">{{changeParam.nightCount}}</div>
                            <div class="option" ng-model="changeParam.nightCount">
                                <span data-value="" ng-repeat="nightCount in changeParam.nightrange track by $index"
                                      ng-click="changeParam.nightCount = nightCount">{{nightCount}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group form__room quarter">
                    <div class="field-container">
                        <div class="form-control form-room">
                            <div class="col-4"><span class="sm-txt grey-txt">Jumlah Kamar</span></div>
                            <div class="col-6 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">{{changeParam.roomCount}}</div>
                            <div class="option" ng-model="changeParam.roomCount">
                                <span data-value="" ng-repeat="roomCount in changeParam.roomrange track by $index"
                                      ng-click="changeParam.roomCount = roomCount">{{roomCount}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix">
            <div class="room-row clearfix" ng-repeat="n in [0,1,2,3,4,5,6,7] track by $index" ng-show="changeParam.roomCount > $index">
                <div class="white-txt bold-txt md-txt">Kamar {{$index+1}}</div>
                <div class="col-4">
                    <div class="form-group form__adult col-half">
                        <div class="form-control form-adult clearfix">
                            <div class="col-4"><span class="sm-txt grey-txt">Dewasa</span></div>
                            <div class="col-6 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">{{changeParam.occupancies[n].adultCount}}</div>
                            <div class="option" ng-model="changeParam.occupancies[n].adultCount">
                                <span data-value="" ng-repeat="adultCount in changeParam.adultrange" ng-init="changeParam.occupancies[n].adultCount = changeParam.occupancies[n].adultCount || 1"
                                      ng-click="(changeParam.occupancies[n].adultCount = adultCount)">{{adultCount}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form__child col-half">
                        <div class="form-control form-child">
                            <div class="col-4"><span class="sm-txt grey-txt">Anak</span></div>
                            <div class="col-6 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">{{changeParam.occupancies[n].childCount}}</div>
                            <div class="option" ng-model="changeParam.occupancies[n].childCount">
                                <span data-value="" ng-repeat="childCount in changeParam.childrange" ng-init="changeParam.occupancies[n].childCount = changeParam.occupancies[n].childCount || 0"
                                      ng-click="(changeParam.occupancies[n].childCount = childCount)">{{childCount}}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-6" ng-show="changeParam.occupancies[n].childCount > 0">
                    <div class="form-group form__child quarter" ng-repeat="child in [0,1,2,3] track by $index"
                         ng-show="changeParam.occupancies[n].childCount > $index">
                        <div class="form-control select-age">
                            <div class="col-6"><span class="sm-txt grey-txt">Usia Anak {{$index}} (th)</span></div>
                            <div class="col-4 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">{{changeParam.occupancies[n].childrenAges[child]}}</div>
                            <div class="option" ng-model="changeParam.occupancies[n].childrenAges[child]">
                                <span data-value="" ng-repeat="childAge in changeParam.childagerange" ng-init="changeParam.occupancies[n].childrenAges = [0,0,0,0]; changeParam.occupancies[n].childrenAges[child] = changeParam.occupancies[n].childrenAges[child]|| 0"
                                      ng-click="(changeParam.occupancies[n].childrenAges[child] = childAge)">{{childAge}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="form-group form__submit pull-left">
            <button class="btn btn-yellow btn-block btn-lg btnSubmit" ng-click="changeParam.getHotels(changeParam)">CARI HOTEL</button>
        </div>
    </div>
</form>