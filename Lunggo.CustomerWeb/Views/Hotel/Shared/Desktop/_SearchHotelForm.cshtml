<form class="hotel-form" name="hotel-form" @*ng-submit="FlightSearchForm.Submit()"*@ novalidate>
    <div class="th-form clearfix">
        <div class="clearfix">
            <div class="form-group form__hotel col-4">
                <input type="text" value="" class="change-hotel form-control" placeholder="Kota, Wilayah atau Nama Hotel" ng-model="hotelSearch.locationDisplay" ng-click="view.showHotelSearch = true">
            </div>
            <div class="col-6 clearfix">
                <div class="form-group form__date quarter">
                    <div class="field-container">
                        <div class="form-control form-date clearfix">
                            <div class="sm-txt col-half grey-txt">Check in</div>
                            @*<div class="pull-right bold-txt darkgrey-txt">{{hotelSearch.checkinDate.format() | date: 'EEE, dd MMM yyyy'}}</div>*@
                            <div class="col-half">
                                <span class="date semibold-txt darkgrey-txt">{{hotelSearch.checkinDateDisplay.split(' ')[0]}}</span>
                                <span class="sm-txt month darkgrey-txt bold-txt">{{hotelSearch.checkinDateDisplay.split(' ')[1].substring(0,3)}}</span>
                                <span class="sm-txt year darkgrey-txt bold-txt">{{hotelSearch.checkinDateDisplay.split(' ')[2]}}</span>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="form-group form__date quarter">
                    <div class="field-container">
                        <div class="form-control form-date">
                            <div class="sm-txt col-half grey-txt">Check out</div>
                            <div class="col-half">
                                <span class="date semibold-txt darkgrey-txt">{{hotelSearch.checkoutDateDisplay.split(' ')[0]}}</span>
                                <span class="sm-txt month darkgrey-txt bold-txt">{{hotelSearch.checkoutDateDisplay.split(' ')[1].substring(0,3)}}</span>
                                <span class="sm-txt year darkgrey-txt bold-txt">{{hotelSearch.checkoutDateDisplay.split(' ')[2]}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group form__night quarter">
                    <div class="field-container">
                        <div class="form-control form-night">
                            <div class="col-4"><span class="sm-txt grey-txt">Malam</span></div>
                            <div class="col-6 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">1</div>
                            <div class="option" ng-model="hotelSearch.roomCount">
                                <span data-value="" ng-repeat="roomCount in hotelSearch.roomrange track by $index"
                                      ng-click="hotelSearch.roomCount = roomCount">{{roomCount}}</span>
                            </div>
                            <div class="option">
                                <span data-value="">1</span>
                                <span data-value="">2</span>
                                <span data-value="">3</span>
                                <span data-value="">4</span>
                                <span data-value="">5</span>
                                <span data-value="">6</span>
                                <span data-value="">7</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group form__room quarter">
                    <div class="field-container">
                        <div class="form-control form-room">
                            <div class="col-4"><span class="sm-txt grey-txt">Jumlah Kamar</span></div>
                            <div class="col-6 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">1</div>
                            <div class="option">
                                <span data-value="">1</span>
                                <span data-value="">2</span>
                                <span data-value="">3</span>
                                <span data-value="">4</span>
                                <span data-value="">5</span>
                                <span data-value="">6</span>
                                <span data-value="">7</span>
                                <span data-value="">8</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix">
            <div class="room-row clearfix">
                <div class="white-txt bold-txt md-txt">Kamar 1</div>
                <div class="col-4">
                    <div class="form-group form__adult col-half">
                        <div class="form-control form-adult clearfix">
                            <div class="col-4"><span class="sm-txt grey-txt">Dewasa</span></div>
                            <div class="col-6 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">2</div>
                            <div class="option">
                                <span data-value="">1</span>
                                <span data-value="">2</span>
                                <span data-value="">3</span>
                                <span data-value="">4</span>
                                <span data-value="">5</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form__child col-half">
                        <div class="form-control form-child">
                            <div class="col-4"><span class="sm-txt grey-txt">Anak</span></div>
                            <div class="col-6 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">2</div>
                            <div class="option">
                                <span data-value="">1</span>
                                <span data-value="">2</span>
                                <span data-value="">3</span>
                                <span data-value="">4</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group form__child quarter">
                        <div class="form-control select-age">
                            <div class="col-6"><span class="sm-txt grey-txt">Usia Anak 1 (th)</span></div>
                            <div class="col-4 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">2</div>
                            <div class="option">
                                <span data-value="">0</span>
                                <span data-value="">1</span>
                                <span data-value="">2</span>
                                <span data-value="">3</span>
                                <span data-value="">4</span>
                                <span data-value="">5</span>
                                <span data-value="">6</span>
                                <span data-value="">7</span>
                                <span data-value="">8</span>
                                <span data-value="">9</span>
                                <span data-value="">10</span>
                                <span data-value="">11</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form__child quarter">
                        <div class="form-control select-age">
                            <div class="col-6"><span class="sm-txt grey-txt">Usia Anak 2 (th)</span></div>
                            <div class="col-4 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">2</div>
                            <div class="option">
                                <span data-value="">0</span>
                                <span data-value="">1</span>
                                <span data-value="">2</span>
                                <span data-value="">3</span>
                                <span data-value="">4</span>
                                <span data-value="">5</span>
                                <span data-value="">6</span>
                                <span data-value="">7</span>
                                <span data-value="">8</span>
                                <span data-value="">9</span>
                                <span data-value="">10</span>
                                <span data-value="">11</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form__child quarter">
                        <div class="form-control select-age">
                            <div class="col-6"><span class="sm-txt grey-txt">Usia Anak 3 (th)</span></div>
                            <div class="col-4 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">2</div>
                            <div class="option">
                                <span data-value="">0</span>
                                <span data-value="">1</span>
                                <span data-value="">2</span>
                                <span data-value="">3</span>
                                <span data-value="">4</span>
                                <span data-value="">5</span>
                                <span data-value="">6</span>
                                <span data-value="">7</span>
                                <span data-value="">8</span>
                                <span data-value="">9</span>
                                <span data-value="">10</span>
                                <span data-value="">11</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form__child quarter">
                        <div class="form-control select-age">
                            <div class="col-6"><span class="sm-txt grey-txt">Usia Anak 4 (th)</span></div>
                            <div class="col-4 input-hotel xlg-txt right-txt semibold-txt darkgrey-txt">2</div>
                            <div class="option">
                                <span data-value="">0</span>
                                <span data-value="">1</span>
                                <span data-value="">2</span>
                                <span data-value="">3</span>
                                <span data-value="">4</span>
                                <span data-value="">5</span>
                                <span data-value="">6</span>
                                <span data-value="">7</span>
                                <span data-value="">8</span>
                                <span data-value="">9</span>
                                <span data-value="">10</span>
                                <span data-value="">11</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="form-group form__submit pull-left">
            <button class="btn btn-yellow btn-block btn-lg btnSubmit" ng-click="hotelSearch.getHotels();">CARI HOTEL</button>
        </div>
    </div>
</form>