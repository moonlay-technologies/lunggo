<body class="eticket page-hotel-voucher">
    <div class="page">
        <header class="page-header">
            <div class="row">
                <div class="col-xs-4">
                    <img class="img-logo" src="@(ConfigManager.GetInstance().GetConfigValue("general", "rootUrl") + @"/Assets/images/voucher/travorama-white.png")" />
