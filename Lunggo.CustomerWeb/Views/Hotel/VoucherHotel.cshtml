                                <p class="grey-txt phone">
                                    @Model.HotelDetail.PhonesNumbers[0]
                                </p>
                            </div>
                            <div class="col-xs-4 right-txt">
                                <h4 class="regular-txt no-reserve">
                                    Nomor Reservasi
                                    <h3 class="blue-txt bold-txt">@Model.RsvNo</h3>
                                </h4>
                            </div>

                        </div>
                    </div>
                    <div class="hb-bottom">
