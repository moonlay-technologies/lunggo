
@{
    ViewBag.Title = "Test";
    Layout = null;
}
<script src="~/Scripts/jquery-2.1.0.min.js"></script>
<!--Reference the SignalR library. -->
<script src="~/Scripts/jquery.signalR-2.1.0.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>
<h2>Test</h2>

<div style="padding: 10px">
    <input type="button" id="longRunningMethodButton" value="Long Running Method" />
    <input type="button" id="cobain" value="cobain" />
</div>
<div id="responsesDiv">
</div>


<script type="text/javascript">
    $(document).ready(function () {
        var hub = $.connection.testHub;

        hub.client.showMessage = function (message) {
            alert(message);
            $("#responsesDiv").append(message + "<br/>");
        };


        hub.client.Cobain = function (object) {
            alert(object.code);
        };
        $.connection.hub.start().done(function () {

            $("#cobain").click(function () {
                hub.server.cobain();
            });

            $("#longRunningMethodButton").click(function () {
                hub.server.searchFlightHub();
            });
        });

    });
</script>



