
@{
    ViewBag.Title = "Hotel Search List";
}

<!-- .search-page content start -->
<div class="search-page hotel-search-page">

    <header class="page-header">
        <div class="container">
            <div class="site-nav"> <a href="#">Beranda</a> / <strong>Hotel List</strong></div>
            <div class="pull-right display-option">display as: <a href="#" class="active"><span class="fa fa-list"></span></a> <a href="#"><span class="fa fa-th"></span></a> </div>
            <hr>
            <div class="pull-left">1 Room for 3 Days (2-15-2015 untill 2-18-2015)</div>
            <div class="pull-right list-option">Show : <select name="#" id="hotel-list"><option value="25">25 Hotels</option><option value="50">50 Hotels</option></select> / page</div>
        </div>
    </header><!-- .page-header -->
    <div class="container">
        <h2 class="page-title"><b>SEARCH</b> RESULT</h2>
    </div>
    <aside class="hotel-filter filter" data-active="false">
        <div class="filter-button">
            <span class="arrow">&gt;</span>
            <span class="text">FILTER OFF</span>
        </div>
        <header>
            <h3><b>FILTER</b> BY</h3>
        </header>
        <section class="filter-group hotel-price">
            <h3 class="section-title">Harga</h3>
            <input type="text" class="form-control">
        </section>
        <section class="filter-group hotel-star">
            <h3 class="section-title">Bintang Hotel</h3>
            <div class="star-selection">
                <ul>
                    <li><input type="checkbox" id="filter-hotel-star-1"> <label class="star star-1" for="filter-hotel-star-1"> <span class="fa fa-star"></span><span class="fa fa-star-o"></span><span class="fa fa-star-o"></span><span class="fa fa-star-o"></span><span class="fa fa-star-o"></span> </label></li>
                    <li><input type="checkbox" id="filter-hotel-star-2"> <label class="star star-2" for="filter-hotel-star-2"> <span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star-o"></span><span class="fa fa-star-o"></span><span class="fa fa-star-o"></span> </label></li>
                    <li><input type="checkbox" id="filter-hotel-star-3"> <label class="star star-3" for="filter-hotel-star-3"> <span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star-o"></span><span class="fa fa-star-o"></span> </label></li>
                    <li><input type="checkbox" id="filter-hotel-star-4"> <label class="star star-4" for="filter-hotel-star-4"> <span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star-o"></span> </label></li>
                    <li><input type="checkbox" id="filter-hotel-star-5"> <label class="star star-5" for="filter-hotel-star-5"> <span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span> </label></li>
                </ul>
            </div>
        </section>
        <section class="filter-group hotel-discount">
            <ul>
                <li><input type="checkbox" id="filter-hotel-discount"> <label for="filter-hotel-discount">Punya diskon</label></li>
            </ul>
        </section>
        <section class="filter-group search-filter">
            <a href="#" class="btn btn-primary">FILTER</a>
        </section>
    </aside><!-- .hotel-filter -->
    <section class="hotel-list horizontal">
        <div class="container" ng-app="travorama">

            <div class="row" ng-controller="HotelController">

                <input placeholder=" locid" ng-model="HotelSearchParams.LocationId" type="text" />
                <input placeholder="CheckIn" ng-model="HotelSearchParams.StayDate" type="text" />
                <input placeholder="StayLength" ng-model="HotelSearchParams.StayLength" type="text" />
                <button ng-click="load_hotel_list()">Search</button>
                
                <div ng-repeat="x in hotels" class="hotel-wrapper col-sm-4">
                    
                    <article class="hotel">
                        <a href="#" class="hotel-link">
                            <img src="{{x.ImageUrlList[0].ThumbSizeUrl}}" alt="Hotel Amaris" class="hotel-image">
                            <section class="hotel-sum">
                                <h2 class="hotel-name">{{x.HotelName}}</h2>
                                <h4 class="hotel-star">
                                    <span class="star star-{{x.StarRating}}"></span>
                                </h4>
                                <h5 class="hotel-address">{{x.Address}}</h5>
                                <div class="hotel-feedback hotel-show-list">
                                    <span class="hotel-like"><span class="fa fa-heart"> 1234</span></span>
                                    <span class="hotel-review"><span class="fa fa-comment"> 1234</span></span>
                                </div>
                            </section><!-- .hotel-sum -->
                            <section class="hotel-tag hotel-show-square">
                                <div class="hotel-price">
                                    <h5 class="price-was"><del>Rp 500.000</del></h5>
                                    <h2 class="price-now">{{x.LowestPrice.Currency}} {{x.LowestPrice.Value}}</h2>
                                </div>
                                <div class="hotel-feedback">
                                    <span class="hotel-like"><span class="fa fa-heart"> 1234</span></span>
                                    <span class="hotel-review"><span class="fa fa-comment"> 1234</span></span>
                                </div>
                                <div class="clearfix"></div>
                                <span>Harga <strong>sudah</strong> termasuk pajak</span>
                            </section><!-- .hotel-tag -->
                            <section class="hotel-tag hotel-show-list">
                                <div class="hotel-price">
                                    <p><b>Price :</b></p>
                                    <h5 class="price-was"><del>Rp 500.000</del></h5>
                                    <h2 class="price-now">{{x.LowestPrice.Currency | currency:"Rp":0}} {{x.LowestPrice.Value | currency:"IDR":0}}</h2>
                                    <span>Harga <strong>sudah</strong> termasuk pajak</span>
                                </div>
                            </section><!-- .hotel-tag -->
                        </a>
                    </article>
                </div><!-- .hotel-wrapper -->


            </div>

        </div>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <nav>
                        <ul class="pagination">
                            <li><a href="#">&lt;</a></li>
                            <li><a href="#" class="active">1</a></li>
                            <li class="active"><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">&gt;</a></li>
                        </ul>
                    </nav>
                </div><!-- .text-center -->
            </div><!-- .row -->
        </div><!-- .container -->
    </section><!-- .hotel-list -->

</div>
<!-- .search-page content end -->