@{
    Layout = "/Views/Shared/Travorama20/_Layout20150929.cshtml";
    ViewBag.BodyClass = "page-index";
    ViewBag.FooterSubscribe = true;
    ViewBag.FooterPayment = true;
    ViewBag.FooterFeedback = false;
}

@section PageJS{
    <script>
        indexPageFunctions();
        subscribeFormFunctions();
        var indexPageDestination = '@ViewBag.Destination' || '';
    </script>
}

<section class="section-search">
    <div class="container">
        <div class="search-form">

            <header class="tab-header">
                <nav>
                    <ul>
                        <li class="flight active"><a href="#">Pesawat</a></li>
                        <li class="hotel" data-toggle="tooltip" data-placement="bottom" title="Coming soon!"><a href="#">Hotel</a></li>
                        <li class="activity" data-toggle="tooltip" data-placement="bottom" title="Coming soon!"><a href="#">Activity</a></li>
                    </ul>
                </nav>
            </header>

            <section class="tab-content">
                <div class="tab-flight active">
                    <form class="form form-horizontal form-flight" action="/id/Flight/SearchResultList" method="GET">
                        <h3 class="text-center">Cari <b>Tiket Pesawat</b></h3>

                        <div class="form-group flight-type">
                            <div class="col-xs-6">
                                <label>
                                    <input type="radio" name="flightType" class="form-flight-type" value="return" checked />
                                    <span>Pulang Pergi</span>
                                </label>
                            </div>
                            <div class="col-xs-6">
                                <label>
                                    <input type="radio" name="flightType" class="form-flight-type" value="oneway" />
                                    <span>Sekali Jalan</span>
                                </label>
                            </div>
                        </div>

                        <div class="form-group flight-destination">
                            <div class="col-xs-12">
                                <input type="text" class="form-flight-origin form-flight-location form-control" value="" placeholder="Bandara Asal" />
                            </div>
                            <div class="text-center col-xs-12">
                                <span class="switch-destination"></span>
                            </div>
                            <div class="col-xs-12">
                                <input type="text" class="form-flight-destination form-flight-location form-control" value="" placeholder="Bandara Tujuan" />
                            </div>
                        </div>

                        <div class="form-group flight-date">
                            <div class="col-xs-6">
                                <div class="form-flight-departure">
                                    <small>Tanggal Keberangkatan</small>
                                    <span class="date">28</span>
                                    <span class="month">Jul</span>
                                    <span class="year">2015</span>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-flight-return">
                                    <small>Tanggal Pulang</small>
                                    <span class="date">28</span>
                                    <span class="month">Jul</span>
                                    <span class="year">2015</span>
                                </div>
                                <div class="form-flight-oneway">
                                    <small>Tanggal Pulang</small>
                                    <h5>SEKALI JALAN</h5>
                                </div>
                            </div>
                        </div>

                        <div class="form-group flight-class">
                            <div class="col-xs-12">
                                <div class="form-control text-center form-flight-class">
                                    <span>Kelas Penerbangan</span>
                                    <div class="option">
                                        <span class="economy" data-value="y">Kelas Ekonomi</span>
                                        <span class="business" data-value="c">Kelas Bisnis</span>
                                        <span class="first" data-value="f">Kelas Utama</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group flight-passenger">
                            <div class="col-xs-4">
                                <div class="form-flight-passenger adult" data-toggle="tooltip" data-placement="left" title="Tidak boleh kosong">
                                    <h5 class="passenger-input adult">1</h5>
                                    <small>
                                        Dewasa<br />(&gt;12th)
                                    </small>
                                    <div class="option">
                                        <span>1</span>
                                        <span>2</span>
                                        <span>3</span>
                                        <span>4</span>
                                        <span>5</span>
                                        <span>6</span>
                                        <span>7</span>
                                        <span>8</span>
                                        <span>9</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-flight-passenger child">
                                    <h5 class="passenger-input child">0</h5>
                                    <small>
                                        Anak<br />(2-12th)
                                    </small>
                                    <div class="option">
                                        <span>0</span>
                                        <span>1</span>
                                        <span>2</span>
                                        <span>3</span>
                                        <span>4</span>
                                        <span>5</span>
                                        <span>6</span>
                                        <span>7</span>
                                        <span>8</span>
                                        <span>9</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-flight-passenger infant" data-toggle="tooltip" data-placement="right" title="Tidak boleh lebih dari jumlah penumpang dewasa">
                                    <h5 class="passenger-input infant">0</h5>
                                    <small>
                                        Bayi<br />(&lt;2th)
                                    </small>
                                    <div class="option">
                                        <span>0</span>
                                        <span>1</span>
                                        <span>2</span>
                                        <span>3</span>
                                        <span>4</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group flight-submit">
                            <div class="col-xs-12">
                                <input type="text" name="info" value="" class="hidden" />
                                <input type="submit" class="btn btn-yellow block flight-submit-button" value="SEARCH" />
                            </div>
                        </div>

                    </form>
                </div><!-- .tab-flight -->
                <div class="tab-hotel">
                    <h3 class="text-center">Cari <b>Kamar Hotel</b><br />(Domestik &amp; Internasional)</h3>
                    <form class="form form-horizontal form-hotel">

                        <div class="form-group hotel-location">
                            <div class="col-xs-12">
                                <input type="text" name="hotelLocation" value="" class="form-hotel-location form-control" placeholder="Kota, Wilayah atau Nama Hotel" />
                            </div>
                        </div>
                        <div class="form-group hotel-date">
                            <div class="col-xs-6">
                                <div class="form-hotel-checkin">
                                    <small>Tanggal Keberangkatan</small>
                                    <span class="date">28</span>
                                    <span class="month">Jul</span>
                                    <span class="year">2015</span>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-hotel-checkout">
                                    <small>Tanggal Keberangkatan</small>
                                    <span class="date">28</span>
                                    <span class="month">Jul</span>
                                    <span class="year">2015</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group hotel-room">
                            <div class="col-xs-6">
                                <div class="form-hotel-night">
                                    <small>Malam</small>
                                    <input type="text" name="hotelNight" value="1" />
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-hotel-room">
                                    <small>Kamar</small>
                                    <input type="text" name="hotelNight" value="1" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group hotel-submit">
                            <div class="col-xs-12">
                                <input type="submit" name="hotelSubmit" value="SEARCH" class="btn btn-yellow block form-control" />
                            </div>
                        </div>

                    </form>
                </div><!-- .tab-hotel -->
                <div class="tab-activity">
                    <hgroup>
                        <h2>Temukan Banyak<br /><b>Aktifitas Menarik</b><br />Yang Bisa Anda<br />Lakukan</h2>
                        <h4>Ribuan Aktifitas di 20+ Tempat Tujuan<br />(Domestik &amp; Internasional)</h4>
                    </hgroup>
                    <hr />
                    <h3><b>Tour &amp; Activity</b> Booking</h3>
                    <form class="form form-activity">
                        <div class="form-group">
                            <input type="text" name="activityLocation" value="" placeholder="Kota, Wilayah atau Aktifitas" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" name="activitySubmit" value="SEARCH" class="btn btn-yellow block form-control" />
                        </div>
                    </form>
                </div><!-- .tab-activity -->
            </section>

        </div><!-- .search-form -->
        @Html.Partial("/Views/Shared/Travorama20/_SearchCalendar.cshtml")
        @Html.Partial("/Views/Shared/Travorama20/_SearchLocation.cshtml")
    </div><!-- .container -->
    <div class="slider">
        <div class="slider-text hidden">
            <h1><img src="/Assets/images/enjoyyoureverymoment.png" alt="Enjoy Your Every Moment" /></h1>
            <p>Ke mana pun Anda ingin bepergian, kami menyediakan pilihan penerbangan <br /> domestik dan internasional dari 900 maskapai</p>
        </div>
    </div><!-- .slider -->
</section><!-- .section-search -->

