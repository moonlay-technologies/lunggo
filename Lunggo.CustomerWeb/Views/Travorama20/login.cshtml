@{
    Layout = "/Views/Shared/Travorama20/_Layout20150929.cshtml";
    ViewBag.BodyClass = "page-account page-account-login";
}


<section class="form-section">
    
    <div class="container">
        
        <div class="row">
            <div class="col-xs-4 col-xs-offset-7">
                
                <form class="login-form form form-horizontal">
                    
                    <hgroup>
                        <h1>Log In</h1>
                        <h4>Dengan Akun Travorama Anda</h4>
                    </hgroup>

                    <div class="form-group">
                        <input type="email" name="email" value="" placeholder="Alamat Email Anda" class="form-control" />
                    </div>
                    
                    <div class="form-group">
                        <input type="password" name="password" value="" placeholder="Password" class="form-control" />
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="LOGIN" class="btn btn-yellow form-control" />
                    </div>
                    
                    <div class="form-group text-right">
                        <label class="control-label"><input type="checkbox" name="remember" value="true" /> <span>Ingat saya</span></label>
                    </div>
                    
                    <div class="form-group text-right">
                        <a href="#linkToForgotPassword">Lupa Password?</a> | <a href="#linkToRegister">Register</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
    
</section><!-- .form-section -->

@Html.Partial("/Views/Shared/travorama20/_SectionBenefit.cshtml")


