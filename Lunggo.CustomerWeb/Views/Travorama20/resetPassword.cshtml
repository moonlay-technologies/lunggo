@{
    Layout = "/Views/Shared/Travorama20/_Layout20150929.cshtml";
    ViewBag.BodyClass = "page-password page-password-reset";
}


<section class="form-section">
    
    <h1 class="text-center section-title stripe">RESET <span>PASSWORD</span></h1>

    <div class="container form-container">

        <p>Alamat email Anda : <b>lorem_ipsum@dolorsitamet.com</b></p>

        <div class="form-wrapper">
            <header>
                <h4 class="header-title">Reset Password Anda</h4>
            </header>
            <section class="form-content">
                <form class="form form-horizontal" name="reset-password-form">
                    <div class="row">
                        <div class="col-xs-4 col-xs-offset-4">
                            
                            <div class="form-group">
                                <label class="control-label">Password Baru:</label>
                                <input type="password" name="password" value="" placeholder="your new password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Konfirmasi Password Baru:</label>
                                <input type="password" name="passwordConfirm" value="" placeholder="confirm your new password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="RESET PASSWORD" class="btn btn-yellow form-control" />
                            </div>

                        </div>
                    </div>
                </form>
            </section><!-- .form-content -->
        </div>

    </div><!-- .form-container -->
    
    <div class="form-container-sent">
    
        <div class="container">
            <div class="text-center">
                <img src="/Assets/images/lock-image.jpg" alt="Password Reset Success" />
            </div>
            
            <h3 class="text-center">Reset Password Anda telah <b>berhasil.</b></h3>
            <p class="text-center">Lorem ipsum dolor sit amet adpiscing elite.</p>
            <div class="text-center">
                <a href="/" class="btn btn-yellow">KEMBALI KE HALAMAN DEPAN</a>
            </div>

        </div>

    </div><!-- .form-sent -->


</section><!-- .form-section -->