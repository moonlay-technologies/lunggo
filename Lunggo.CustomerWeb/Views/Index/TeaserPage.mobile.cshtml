<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Full - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="/Assets/teaserpage/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,600" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/Assets/teaserpage/cssMobile/full.css" rel="stylesheet">
    <link href="/Assets/teaserpage/cssMobile/style.css" rel="stylesheet">
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-white">
        <div class="container">
            <a class="navbar-brand container-logo" href="#">
                <img class="img-logo" src="/Assets/teaserpage/imgMobile/travorama-logo.png">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation" onclick="disableBalloon()">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/tiket-pesawat">Pesawat</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/hotel">Hotel</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="balloon" style="display:none">
        <div class="ballon">
            Kamu masih bisa pesan tiket pesawat dan hotel di sini
        </div>
        <div class="triangle">
            <img style="width:21px" src="/Assets/teaserpage/imgMobile/triangel.png">
        </div>
    </div>

    <div class="container-content">
        <div style="text-align: center; font-size: 22px; font-weight:600;">Psst, akan ada yang baru di Travorama!</div>
        <div class="container-timer clearfix" id="timer">
            <div class="box-timer">
                <div class="time" id="day">XX</div>
                <div class="day">hari</div>
            </div>
            <div class="box-divider">
                <div class="divider">:</div>
            </div>
            <div class="box-timer">
                <div class="time" id="hour">XX</div>
                <div class="day">jam</div>
            </div>
            <div class="box-divider">
                <div class="divider">:</div>
            </div>
            <div class="box-timer">
                <div class="time" id="minute">XX</div>
                <div class="day">menit</div>
            </div>
            <div class="box-divider">
                <div class="divider">:</div>
            </div>
            <div class="box-timer">
                <div class="time" id="second">XX</div>
                <div class="day">detik</div>
            </div>
        </div>
        <div class="container-timer clearfix">
            <form id="form">
                <div style="font-size: 16px; font-weight:400; color:#494949; text-align:center; margin-top: 5px;">Penasaran?</div>
                <div style="width:100%; margin-top: 10px">
                    <div class="form-group">
                        <input type="text" id="form-input" name="input" class="form-control subscribe-form" placeholder="Alamat email kamu">
                    </div>
                </div>
                <div style="margin-top: 10px; text-align:center;">
                    <input type="submit" class="btn btn-default btn-submit" value="Yes!">
                </div>
            </form>
        </div>
    </div>

    <!-- Page Content -->
    <!-- Bootstrap core JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
    <script src="/Assets/teaserpage/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.countdown/2.0.4/jquery.countdown.min.js"></script>

    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('#balloon').removeAttr('style');
            }, 7000);
        });

        var launchTime = new Date('@((new DateTime(2018,4,22)).ToString("yyyy-MM-dd'T'HH:mm:ss'Z'"))');
        // countdown timer
        var now = new Date();
        $('#timer').countdown(launchTime, function (event) {
            $('#day').text(event.strftime('%-D'));
            $('#hour').text(event.strftime('%-H'));
            $('#minute').text(event.strftime('%-M'));
            $('#second').text(event.strftime('%-S'));
        });

        $('#form').submit(function (e) {
            e.preventDefault();
            if ($('#form-input').val() != '') {
                $.ajax({
                    url: '/id/index/TeaserPageSubscribe?input=' + $('#form-input').val(),
                    method: 'get',
                });
                window.alert('Terima kasih telah bergabung! Kami akan hubungi kamu kembali melalui ' + $('#form-input').val());
                $('#form-input').val('');
            }
        });

        function disableBalloon() {
            window.clearTimeout();
            $('#balloon').attr('style', 'display:none');
        }
    </script>



</body>

</html>
