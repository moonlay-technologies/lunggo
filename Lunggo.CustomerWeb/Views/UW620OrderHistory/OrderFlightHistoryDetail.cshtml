@using Lunggo.ApCommon.Payment.Constant
@using Lunggo.Framework.Extension
@model Lunggo.ApCommon.Flight.Model.FlightReservationForDisplay
@{
    Layout = "/Views/Shared/Travorama20/_Layout20150929.cshtml";
    ViewBag.BodyClass = "page-account page-account-profile";
    ViewBag.PageActiveSection = "order";
}

@section AdditionalJS{
    <!-- additional Angular JS-->
    <script src="/Assets/js/angular.min.js"></script>
    <script src="/Assets/js/angular-animate.min.js"></script>
    <script src="/Assets/js/angular-route.min.js"></script>
}

@section PageJS{
    <script>
    var langCode = 'en';
    // order history content
        var contactDetail = {
            email: '@Model.Contact.Email',
            name: '@Model.Contact.Name',
            date: '@Model.RsvTime',
            finalPrice: '@Model.Payment.FinalPrice.ToString("##.###")',
            paymentMethod: '@Model.Payment.Method',
            paymentStatus: '@Model.Payment.Status'
        };
        var passengerDetail = @Html.Raw(Model.Passengers.Serialize());
        var flightDetail = @Html.Raw(Model.Itinerary.Trips.Serialize());
        var refundDetail = '';
    </script>
    <!-- angular controller -->
    <script src="/Assets/travorama20/js/accountController.js"></script>
}


<div class="container" ng-app="travorama" ng-controller="orderDetailController">
    <div class="row">

        <div class="col-xs-3">
            @if (@User.Identity.IsAuthenticated)
            {
                @Html.Partial("/Views/Shared/travorama20/_SectionUserMenu.cshtml")
            }
        </div>
        <!-- ******************** -->

        <div class="col-xs-9">
            <section class="account-content">

                <div class="order-detail">
                    <header class="content-header">
                        <h2>ORDER ID : <b>@Model.RsvNo</b></h2>
                    </header>
                    <section class="content-body">

                        <div class="info-buyer">
                            <header>
                                @if (@Model.IsIssued)
                                {
                                    <h4><b>BUYER INFO</b> <a href="@Url.Action("OrderFlightHistoryDetailPrint", "UW620OrderHistory", new { rsvNo = Model.RsvNo })" target="_blank" class="pull-right btn btn-yellow">@Html.I18NString("CW00198")</a> </h4>
                                }
                                else
                                {
                                    <h4><b>BUYER INFO</b> <button class="pull-right btn btn-yellow" disabled>@Html.I18NString("CW00198")</button><a style="margin-right:6px;" href="@Url.Action("OrderFlightHistoryDetailPrint", "UW620OrderHistory", new { rsvNo = Model.RsvNo })" target="_blank" class="pull-right btn btn-yellow">Confirm</a></h4>
                                }
                            </header>
                            <section>
                                <div class="form form-horizontal">
                                    <div class="form-group">
                                        <label class="control-label col-xs-3">User ID</label>
                                        <div class="col-xs-9">
                                            <p class="form-control-static">{{contactDetail.email}}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-xs-3">Order Name</label>
                                        <div class="col-xs-9">
                                            <p class="form-control-static">{{contactDetail.name}}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-xs-3">Order Date</label>
                                        <div class="col-xs-9">
                                            <p class="form-control-static">{{getTime(contactDetail.date) | date:'d - MMMM - yyyy . H:mm':'UTC'}}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-xs-3">Order Type</label>
                                        <div class="col-xs-9">
                                            <p class="form-control-static">Flight</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-xs-3">Order Final Price</label>
                                        <div class="col-xs-9">
                                            <p class="form-control-static">Rp {{contactDetail.finalPrice | number}}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-xs-3">Payment Method</label>
                                        <div class="col-xs-9">
                                            <p class="form-control-static">{{contactDetail.paymentMethod}}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-xs-3">Payment Status</label>
                                        <div class="col-xs-9">
                                            <p class="form-control-static">{{contactDetail.paymentStatus}}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-xs-3">@Html.I18NString("CW00017")</label>
                                        <div class="col-xs-9">
                                            <ol class="passenger-list">
                                                <li ng-repeat="passenger in passengerDetail">
                                                    <div class="row">
                                                        <div class="col-xs-9">
                                                            <p>{{passenger.Title}} {{passenger.FirstName}} {{passenger.LastName}}</p>
                                                        </div>
                                                        <div class="col-xs-3">
                                                            <span>{{passenger.Type}}</span>
                                                        </div>
                                                    </div>
                                                </li>
                                            </ol>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div><!-- .info-buyer -->

                        <div class="info-flight">
                            <header>
                                <h4><b>@Html.I18NString("CW00199")</b></h4>
                            </header>
                            <section>

                                <div class="flight" ng-repeat="flight in flightDetail track by $index" ng-class="{'departure': $index == 0 , 'return' : $index != 0}">
                                    <p><img ng-src="{{flight.Segments[0].AirlineLogoUrl}}" alt="{{flight.Segments[0].AirlineName}}" /> <span>{{flight.Segments[0].AirlineName}}</span> </p>
                                    <div class="row">
                                        <div class="col-xs-2">
                                            <p ng-if="$index == 0">Berangkat : </p>
                                            <p ng-if="$index == 1">Pulang : </p>
                                        </div>
                                        <div class="col-xs-9">
                                            <p>{{flight.Segments[0].DepartureCity}} - {{flight.Segments[0].ArrivalCity}}</p>
                                            <p>{{flight.Segments[0].DepartureTime}}</p>
                                        </div>
                                    </div>
                                </div>

                            </section>

                        </div><!-- .info-flight -->

                        <div class="refund-detail">
                            <header>
                                <h4><b>@Html.I18NString("CW00199")</b></h4>
                            </header>
                            <section>
                                <div class="form form-horizontal">
                                    <div class="form-group">
                                        <label class="control-label col-xs-3">No Refund</label>
                                        <div class="col-xs-9">
                                            <p class="form-control-static">
                                                @(Model.Payment.Refund != null ?
                                            Model.Payment.Refund.Amount.ToString() : "-")
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-xs-3">Tgl Pengajuan</label>
                                    <div class="col-xs-9">
                                        <p class="form-control-static">
                                            @(Model.Payment.Refund != null ?
                                            Model.Payment.Refund.Time.ToString() : "-")
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">Status Refund</label>
                                <div class="col-xs-9">
                                    <p class="form-control-static">-</p>
                                </div>
                            </div>
                        </div>
                    </section>
                </div><!-- .refund-detail -->

            </section>
        </div><!-- .history-content -->

    </section><!-- .account-content -->
</div>

</div>
</div>