@{
    Layout = "/Views/Shared/B2BTravorama/_B2BLayout.cshtml";
    ViewBag.BodyClass = "b2b-reset-password";
    ViewBag.SiteHeader = "b2b-reset-password";
    ViewBag.Title = "Reset Password";
    ViewBag.AngularController = "b2bForgotPasswordController";

}

@section AdditionalCSS{
}

@section AdditionalJS{
    <script src="/Assets/js/js.cookie.js"></script>
    <script src="/Assets/js/angular.min.js"></script>
    <script src="/Assets/js/angular-route.min.js"></script>
    <script src="/Assets/js/angular-animate.min.js"></script>
    <script src="/Assets/js/xml2json.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular-resource.js"></script>
    <script src="/Assets/B2BTravorama/assets/js/form_elements.js" type="text/javascript"></script>
}

@section PageJS{
    <script src="/Assets/travorama20/js/B2BTravorama20.js"></script>
    <script src="/Assets/travorama20/js/B2BAccountController.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $('body .reset-password-notif').hide();
            $('body #reset-pass').on('click', function () {
                $('body .reset-password-notif').fadeIn();
            });
        })
    </script>
}

<div ng-app="travoramaB2B" ng-controller="b2bForgotPasswordController" ng-class="{'active' : pageLoaded}">
    <div class="reset-password">
        <p class="p-t-35">Masukkan alamat email Anda dan kami akan mengirimkan email instruksi untuk mengganti password Anda</p>
        <form id="form-login" class="p-t-15" role="form">
            <div class="form-group form-group-default">
                <label>Alamat Email</label>
                <div class="controls">
                    <input type="email" name="username" placeholder="example@domail.com" class="form-control email" required
                           ng-model="form.email">
                </div>
            </div>
            <a class="btn btn-primary btn-cons m-t-10 buttonSubmit" type="submit" id="reset-pass" ng-click="form.submit()">Kirim Email</a>
        </form>

    </div>
    
    <div class="reset-password-notif">
        <p class="p-t-35" ng-show="form.found && form.emailConfirmed">Pesan verifikasi telah dikirimkan ke alamat email Anda. Klik link yang telah dikirimkan ke email Anda untuk melanjutkan proses reset password Anda.</p>
        <p class="p-t-35" ng-show="form.submitted && form.found && !form.emailConfirmed" style="color:red">Anda belum mengkonfirmasikan alamat e-mail Anda. Silakan cek e-mail Anda dari Travorama untuk mengkonfirmasikan alamat e-mail Anda.</p>
        <p class="p-t-35" ng-show="form.submitted && !form.found" style="color:red">Alamat e-mail Anda belum terdaftar di Travorama.</p>
    </div>
</div>
