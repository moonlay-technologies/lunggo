@{
    Layout = "/Views/Shared/B2BTravorama/_B2BLayout.cshtml";
    ViewBag.BodyClass = "b2b-login";
    ViewBag.SiteHeader = "b2b-login";
    ViewBag.Title = "Login";
    ViewBag.AngularController = "b2bAuthController";
}

@section AdditionalCSS{
}

@section AdditionalJS{
    <script src="/Assets/js/js.cookie.js"></script>
    <script src="/Assets/js/angular.min.js"></script>
    <script src="/Assets/js/angular-route.min.js"></script>
    <script src="/Assets/js/angular-animate.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular-resource.js"></script>
    <script src="/Assets/B2BTravorama/assets/js/form_elements.js" type="text/javascript"></script>
}

@section PageJS{
    <script src="/Assets/travorama20/js/B2BTravorama20.js"></script>
    <script src="/Assets/travorama20/js/B2BAccountController.js"></script>
}

<div class="login-form" ng-app="travoramaB2B" ng-controller="b2bAuthController" ng-class="{'active' : pageLoaded}">
    <p class="p-t-35">Masuk dengan akun <span class="bold">Travorama Serko</span></p>
    <p ng-show="loginFailed" style="color:red">{{errorMessage}}</p>
    <form id="form-login" class="p-t-15" role="form">
        @Html.AntiForgeryToken()
        <div class="form-group form-group-default">
            <label>E-mail</label>
            <div class="controls">
                <input type="text" name="username" placeholder="name@domain.com" class="form-control" required ng-model="form.email">
            </div>
        </div>
        <div class="form-group form-group-default">
            <label>Password</label>
            <div class="controls">
                <input type="password" class="form-control" name="password" placeholder="Password" required ng-model="form.password">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 no-padding hidden">
                <div class="checkbox ">
                    <input type="checkbox" value="1" id="checkbox1">
                    <label for="checkbox1">Ingat Saya</label>
                </div>
            </div>
            <div class="col-md-6 text-right">
                <a href="/id/B2BTemplate/ResetPassword" class="text-info small bold">Lupa password</a>
            </div>
        </div>
        <button class="btn btn-primary btn-cons m-t-10" type="submit" ng-click="form.submit()">Login</button>
    </form>
</div>