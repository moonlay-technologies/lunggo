<div class="user-management">
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <div class="panel-title">
                User Management
            </div>
        </div>
        <div class="panel-body bg-white um-body">
            <div class="row clearfix m-b-15">
                <div class="col-sm-4 pull-right">
                    <div class="btn-group btn-group-justified">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default">
                                <span class="m-r-5">
                                    <i class="fa fa-sort fs-15"></i>
                                </span>
                                <span class="fs-11 font-montserrat text-uppercase">Sort</span>
                            </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default">
                                <span class="m-r-5">
                                    <i class="fa fa-filter fs-15"></i>
                                </span>
                                <span class="fs-11 font-montserrat text-uppercase">Filter</span>
                            </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#add-user">
                                <span class="m-r-5">
                                    <i class="fa fa-user fs-15"></i>
                                </span>
                                <span class="fs-11 font-montserrat text-uppercase">Tambah User</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="width:20%">Nama</th>
                            <th style="width:20%">Alamat Email</th>
                            <th style="width:20%">Nama Approver</th>
                            <th style="width:20%">Role</th>
                            <th style="width:20%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="um-item" id="um-item-1">
                            <td class="v-align-middle ">
                                <div class="thumbnail-wrapper d32 circular inline m-r-10">
                                    <img src="/Assets/B2BTravorama/assets/img/profiles/avatar.jpg" alt="" data-src="/Assets/B2BTravorama/assets/img/profiles/avatar.jpg" width="32" height="32">
                                </div>
                                <div class="m-t-5">Anonymous</div>
                            </td>
                            <td class="v-align-middle ">
                                <div>travel@example.com</div>
                            </td>
                            <td class="v-align-middle">
                                <div class="thumbnail-wrapper d32 circular inline m-r-10">
                                    <img src="/Assets/B2BTravorama/assets/img/profiles/avatar.jpg" alt="" data-src="/Assets/B2BTravorama/assets/img/profiles/avatar.jpg" width="32" height="32">
                                </div>
                                <div class="m-t-5">Mr. Anonymous</div>
                            </td>
                            <td class="v-align-middle">
                                <div>BOOKER</div>
                            </td>
                            <td class="v-align-middle">
                                <button class="btn remove-payment m-r-10" data-toggle="modal" data-target="#edit-user">
                                    <i class="fa fa-pencil"></i>
                                </button>
                                <button class="btn btn-danger btn-cons" style="">Deactivate</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade slide-up disable-scroll" tabindex="-1" role="dialog" aria-hidden="false" id="add-user">
        <div class="modal-dialog">
            <div class="modal-content-wrapper">
                <div class="modal-content">
                    <div class="modal-header clearfix text-left">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <i class="pg-close fs-14"></i>
                        </button>
                        <h5 class="p-b-10">Tambah <span class="semi-bold">User Baru</span></h5>
                    </div>
                    <div class="modal-body">
                        <form class="" role="form">
                            <div class="form-group form-group-default required ">
                                <label>Nama</label>
                                <input type="text" class="form-control" placeholder="Nama User" required="">
                            </div>
                            <div class="form-group form-group-default required ">
                                <label>Alamat Email</label>
                                <input type="email" class="form-control" placeholder="example@domain.com" required="">
                            </div>
                            <div class="form-group form-group-default required ">
                                <label>Nama Approval</label>
                                <input type="text" class="form-control" placeholder="Nama Approval" required="">
                            </div>
                            <div class="form-group">
                                <label>Role</label>
                                <br />
                                <div class="btn-group dropdown-default required">
                                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Booker <span class="caret"></span> </a>
                                    <ul class="dropdown-menu ">
                                        <li>
                                            <a href="#">Booker</a>
                                        </li>
                                        <li>
                                            <a href="#">Approver</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </form>
                        <div class="clearfix">
                            <button type="button" class="btn btn-primary m-t-5 pull-right" data-dismiss="modal" id="add-user"><i class="fa fa-save m-r-10"></i>Simpan</button>
                            <button type="button" class="btn btn-default m-t-5 m-r-10 pull-right" data-dismiss="modal"><i class="fa fa-arrow-left m-r-10"></i>Kembali</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade slide-up disable-scroll" tabindex="-1" role="dialog" aria-hidden="false" id="edit-user">
        <div class="modal-dialog">
            <div class="modal-content-wrapper">
                <div class="modal-content">
                    <div class="modal-header clearfix text-left">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <i class="pg-close fs-14"></i>
                        </button>
                        <h5 class="p-b-10">Edit <span class="semi-bold">User</span></h5>
                    </div>
                    <div class="modal-body">
                        <form class="" role="form">
                            <div class="form-group">
                                <label>Role</label>
                                <br />
                                <div class="btn-group dropdown-default required">
                                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Booker <span class="caret"></span> </a>
                                    <ul class="dropdown-menu ">
                                        <li>
                                            <a href="#">Booker</a>
                                        </li>
                                        <li>
                                            <a href="#">Approver</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </form>
                        <div class="clearfix">
                            <button type="button" class="btn btn-primary m-t-5 pull-right" data-dismiss="modal"><i class="fa fa-save m-r-10"></i>Simpan</button>
                            <button type="button" class="btn btn-default m-t-5 m-r-10 pull-right" data-dismiss="modal"><i class="fa fa-arrow-left m-r-10"></i>Kembali</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>