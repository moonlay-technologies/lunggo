        jQuery(document).ready(function ($) {
            var cloneIndex = $(".um-item").length;

            function clone() {
                cloneIndex++;
                $(this).closest('.user-management').find('#um-item-1').clone(false, false)
                    .insertAfter('#um-item-1')
                    .attr('id', "um-item-" + cloneIndex)
                    .attr('count', cloneIndex);
