                //    $(this).closest('.um-body').find('#um-item-' + cloneIndex + ' .remove-um').show();
                //    $(this).closest('.um-body').find('#um-item-' + cloneIndex + ' .pi-status').find('.current-status').hide();
                //    $(this).closest('.um-body').find('#um-item-' + cloneIndex + ' .pi-status').append('<a class="set-status">' + 'Set As Primary' + '</a>');
                //}
            }

            //function remove() {
            //    $(this).parents('.payment-item').remove();
            //}

            $('body .modal #add-user').on('click', clone);

            $('.sort-content, .filter-content').hide();

            $('#btn-um-filter').click(function () {
                $('.filter-content').show();
                $(this).css('background', '#eee');
                $('#btn-um-sort').css('background', '#fff');
                $('.sort-content').hide();
            });

            $('#btn-um-sort').click(function () {
                $('.sort-content').show();
                $(this).css('background', '#eee');
                $('#btn-um-filter').css('background', '#fff');
                $('.filter-content').hide();
            });

            $('#btn-um-add').click(function () {
                $('#btn-um-filter, #btn-um-sort').css('background', '#fff');
                $('.sort-content, .filter-content').hide();
            });
        });
    </script>
}

