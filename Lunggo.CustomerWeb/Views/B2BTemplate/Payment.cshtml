@{
    Layout = "/Views/Shared/B2BTravorama/_B2BLayout.cshtml";
    ViewBag.BodyClass = "b2b-payment";
    ViewBag.SiteHeader = "b2b-payment";
    ViewBag.Title = "Payment Management";
    ViewBag.AngularController = "";

}

@section AdditionalCSS{
}

@section AdditionalJS{
}

@section PageJS{
    <script>
        jQuery(document).ready(function ($) {
            var cloneIndex = $(".payment-item").length;

            function clone() {
                $(this).closest('.payment-body').find('#payment-item-1').clone(false, false)
                    .prependTo('.payment-body')
                    .attr('id', 'payment-item-' + cloneIndex);
                cloneIndex++;
            }

            function remove() {
                $(this).parents('.payment-item').remove();
            }

            $('body #add-payment').on('click', clone);
            $('body .remove-payment').on('click', remove);

            $('body .btn-edit-payment').click(function () {
                var size = $('input[name=slideup_toggler]:checked').val();
                var modalElem = $('.modal-edit-payment');
                if (size == "mini") {
                    $('.modal-edit-payment').modal('show');
                } else {
                    $('.modal-edit-payment').modal('show');
                    if (size == "default") {
                        modalElem.children('.modal-dialog').removeClass('modal-lg');
                    } else if (size == "full") {
                        modalElem.children('.modal-dialog').addClass('modal-lg');
                    }
                }
            });
        })
    </script>
}

<div class="payment-page">
    <div class="panel panel-transparent">
        <div class="panel-heading ">
            <div class="panel-title">
                Payment Management
            </div>
        </div>
        <div class="panel-body m-t-10 payment-body">
            <div class="payment-item col-sm-6 m-b-20" id="payment-item-1">
                <div class="pi-wrapper clearfix">
                    <div class="pi-top clearfix">
                        <div class="">
                            <div class="icon-visa"></div>
                        </div>
                        <div class="clearfix">
                            <div class="font-montserrat bold">Visa ****0003</div>
                            <div class="small hint-text">Expires 05/20</div>
                        </div>
                        <button class="btn remove-payment">
                            <i class="pg-trash"></i>
                        </button>
                    </div>
                    <div class="pi-bottom clearfix">
                        <div class="">Primary</div>
                        <div class="pull-right"><a href="#" class="btn-edit-payment">Edit</a></div>
                    </div>
                </div>
            </div>
            <div class="payment-add col-sm-6 m-b-20">
