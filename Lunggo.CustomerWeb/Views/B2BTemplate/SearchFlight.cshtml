@model Lunggo.CustomerWeb.Models.GetBookingDisabilityStatusResponse

@{
    Layout = "/Views/Shared/B2BTravorama/_B2BLayout.cshtml";
    ViewBag.BodyClass = "b2b-search flight";
    ViewBag.SiteHeader = "b2b-search-flight";
    ViewBag.Title = "Search Flight";
    ViewBag.AngularController = "B2BFlightSearchFormController";
}

@section AdditionalCSS{
    <link href="/Assets/css/autocomplete.css" rel="stylesheet" />
}

@section AdditionalJS{
<script src="/Assets/js/js.cookie.js"></script>
    <script src="/Assets/js/angular.min.js"></script>
    <script src="/Assets/js/angular-route.min.js"></script>
    <script src="/Assets/js/angular-animate.min.js"></script>

    <script src="/Assets/js/moment.min.js"></script>
    <script src="/Assets/js/moment-with-locales.min.js"></script>
    <script src="/Assets/js/xml2json.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular-resource.js"></script>
    <script src="/Assets/B2BTravorama/assets/js/form_elements.js" type="text/javascript"></script>
    
}

@section PageJS{
    <script src="/Assets/travorama20/js/B2BTravorama20.js"></script>    
    <script src="/Assets/travorama20/js/B2BHomeController.js"></script>   
}

<div class="search-flight" ng-app="travoramaB2B" ng-controller="B2BFlightSearchFormController" ng-class="{'active' : pageLoaded}">
    @if (Model.IsBookingDisabled == true)
    {
        <div class=" panel panel-transparent">
            <div class="panel-heading ">
                <div class="panel-title">
                    Booking system is disabled
                </div>
            </div>
        </div>
    }
    else
    {
        <div class=" panel panel-transparent">
            <div class="panel-heading ">
                <div class="panel-title">
                    Cari Tiket Pesawat
                </div>
            </div>
            <div class="panel-body">
                <form id="form-flight" role="form" autocomplete="off" novalidate="novalidate">
                    <div class="row clearfix radio radio-primary">
                        <div class="col-sm-6 col-xs-6">
                            <input type="radio" value="Return" name="triptype" id="no">
                            <label for="no">Pulang Pergi</label>
                        </div>
                        <div class="col-sm-6 col-xs-6">
                            <input type="radio" value="OneWay" name="triptype" id="yes">
                            <label for="yes">Sekali Jalan</label>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group form-group-default">
                                <label>Dari</label>
                                <input type="text" class="form-control" placeholder="Jakarta (CGK)" ng-click="showLocation('origin')"
                                       id="originPlace" ng-model="searchParam.Origin">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-group-default">
                                <label>Ke</label>
                                <input type="text" class="form-control" placeholder="Denpasar (Bali) (DPS)" id="destinationPlace"
                                       ng-click="showLocation('destination')" ng-model="searchParam.Destination">
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group form-group-default input-group depDate">
                                <label>Tanggal Berangkat</label>
                                <input type="email" class="form-control" placeholder="Pilih tanggal berangkat" id="departureDate">
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>

                                @*<label>Tanggal Berangkat</label>
                                    <input hidden name="depDate" id="departureDate" />
                                    <input type="email" class="form-control" id="valueDepDate" placeholder="Pilih tanggal berangkat" />
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>*@
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-group-default input-group retDate">

                                <label>Tanggal Berangkat</label>
                                <input type="email" class="form-control" placeholder="Pilih tanggal kembali" id="returnDate">
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>

                                @*<label>Tanggal Kembali</label>
                                    <input hidden name="retDate" id="returnDate" />
                                    <input type="email" class="form-control" placeholder="Pilih tanggal kembali" id="valueRetDate"/>

                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>*@
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix passenger">
                        <div class="col-sm-4">
                            <div class="form-group form-group-default">
                                <label class="label-custom">Dewasa</label>
                                <span class="help m-l-5">(> 12 tahun)</span>
                                <select class="cs-select cs-skin-slide adultPax" data-init-plugin="cs-select" ng-model="Passenger.Adult">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="form-group form-group-default">
                                <label class="label-custom">Anak-anak</label>
                                <span class="help m-l-5">(2 - 12 tahun)</span>
                                <select class="cs-select cs-skin-slide childPax" data-init-plugin="cs-select" ng-model="Passenger.Child">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group form-group-default">
                                <label class="label-custom">Bayi</label>
                                <span class="help m-l-5">(< 2 tahun)</span>
                                <select class="cs-select cs-skin-slide infantPax" data-init-plugin="cs-select" ng-model="Passenger.Infant">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-4">
                            <div class="form-group form-group-default">
                                <label class="label-custom">Kelas</label>
                                <select class="cs-select cs-skin-slide pax" data-init-plugin="cs-select" ng-model="searchParam.CabinClass">
                                    <option value="y">Ekonomi</option>
                                    <option value="c">Bisnis</option>
                                    <option value="f">Utama</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix m-t-10">
                        <button class="btn btn-primary" type="submit" ng-click="gotoSearchResult()">Cari Penerbangan</button>
                    </div>
                </form>
            </div>
        </div>
    }
    
    @Html.Partial("/Views/Shared/Desktop/_SearchLocation.cshtml")

</div>