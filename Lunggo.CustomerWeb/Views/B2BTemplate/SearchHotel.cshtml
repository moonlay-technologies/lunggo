@using Lunggo.CustomerWeb.Models
@model GetBookingDisabilityStatusResponse

@{
    Layout = "/Views/Shared/B2BTravorama/_B2BLayout.cshtml";
    ViewBag.BodyClass = "b2b-search hotel";
    ViewBag.SiteHeader = "b2b-search-hotel";
    ViewBag.Title = "Search Hotel";
    ViewBag.AngularController = "B2BHotelSearchFormController";

}

@section AdditionalCSS{
    <link href="/Assets/css/autocomplete.css" rel="stylesheet" />
}

@section AdditionalJS{
    <script src="/Assets/js/js.cookie.js"></script>
    <script src="/Assets/js/angular.min.js"></script>
    <script src="/Assets/js/angular-route.min.js"></script>
    <script src="/Assets/js/angular-animate.min.js"></script>

    <script src="/Assets/js/moment.min.js"></script>
    <script src="/Assets/js/moment-with-locales.min.js"></script>
    <script src="/Assets/js/xml2json.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular-resource.js"></script>
    <script src="/Assets/B2BTravorama/assets/js/form_elements.js" type="text/javascript"></script>

    @*<link href="https://cdn.jsdelivr.net/bootstrap.datepicker-fork/1.3.0/css/datepicker3.css" rel="stylesheet"/>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/bootstrap.datepicker-fork/1.3.0/js/bootstrap-datepicker.js"></script>
        <script src="https://cdn.jsdelivr.net/bootstrap.datepicker-fork/1.3.0/js/locales/bootstrap-datepicker.id.js"></script>
        <input class="datepicker"/>*@
}

@section PageJS{
    <script src="/Assets/travorama20/js/B2BTravorama20.js"></script>
    <script src="/Assets/travorama20/angularDirectory/search/hotelSearch.service.js"></script>
    <script src="/Assets/travorama20/js/B2BHomeController.js"></script>

    <script>
        jQuery(document).ready(function ($) {
            $('body #room-hotel-detail').hide();
            var room = $('body #room-hotel').find('.cs-select');
            $(room).on('click', function () {
                $('body #room-hotel-detail').fadeIn();
            });
        })
    </script>

}

<div ng-app="travoramaB2B" ng-controller="B2BHotelSearchFormController" ng-class="{'active' : pageLoaded}">
    @if (Model.IsBookingDisabled == true)
    {
        <div class=" panel panel-transparent">
            <div class="panel-heading ">
                <div class="panel-title">
                    Booking system is disabled
                </div>
            </div>
        </div>
    }
    else
    {
        <div class=" panel panel-transparent">
            <div class="panel-heading ">
                <div class="panel-title">
                    Cari Kamar Hotel
                </div>
            </div>
            <div class="panel-body m-t-10">
                <form id="form-flight" role="form" autocomplete="off" novalidate="novalidate">
                    <div class="row clearfix">
                        <div class="col-sm-6 m-b-15">
                            <div class="form-group">
                                <label>Tujuan</label>
                                <input type="text" class="form-control" placeholder="Bali, Indonesia" ng-model="hotelSearch.locationDisplay">
                            </div>
                            @*<div class="form-group form-group-default">
                                    <label>Tujuan</label>
                                    <input type="text" class="form-control hotel-location" placeholder="Bali, Indonesia" ng-model="hotelSearch.locationDisplay">
                                </div>*@
                        </div>
                        <div class="col-sm-6 m-b-15">
                            <div class="form-group">
                                <label>Tanggal Check In</label>
                                <div id="checkInDate" class="input-group date">
                                    <input type="text" class="form-control"><span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                            @*<div class="form-group form-group-default input-group">
                                    <label>Tanggal Check In</label>
                                    <input type="email" class="form-control" placeholder="Pilih tanggal Check In" id="checkInDate">
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>*@
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6 m-b-15">
                            <div class="form-group">
                                <label>Malam</label>
                                <div class="form-group">
                                    <select class="full-width nightCount" data-init-plugin="select2" ng-model="hotelSearch.nightCount">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                    </select>
                                </div>
                            </div>
                            @*<div class="form-group form-group-default">
                                    <label class="label-custom">Malam</label>
                                    <select class="cs-select cs-skin-slide nightCount" data-init-plugin="cs-select" ng-model="hotelSearch.nightCount">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                    </select>
                                </div>*@
                        </div>
                        <div class="col-sm-6 m-b-15">
                            <div class="form-group">
                                <label>Jumlah Kamar</label>
                                <div class="form-group" id="room-hotel">
                                    <select class=" full-width roomCount" data-init-plugin="select2" ng-model="hotelSearch.roomCount">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                        <option value="8">8</option>
                                    </select>
                                </div>
                            </div>
                            @*<div class="form-group form-group-default" id="room-hotel">
                                    <label class="label-custom">Jumlah Kamar</label>
                                    <select class="cs-select cs-skin-slide roomCount" data-init-plugin="cs-select" ng-model="hotelSearch.roomCount">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                        <option value="8">8</option>
                                    </select>
                                </div>*@
                        </div>
                    </div>

                    <div ng-show="hotelSearch.roomCount >= 1">
                        @Html.Partial("/Views/Shared/B2BTravorama/Occupancies.cshtml", new OccupancyModel { Order = 0 })
                    </div>
                    <div ng-show="hotelSearch.roomCount >= 2">
                        @Html.Partial("/Views/Shared/B2BTravorama/Occupancies.cshtml", new OccupancyModel { Order = 1 })
                    </div>
                    <div ng-show="hotelSearch.roomCount >= 3">
                        @Html.Partial("/Views/Shared/B2BTravorama/Occupancies.cshtml", new OccupancyModel { Order = 2 })
                    </div>
                    <div ng-show="hotelSearch.roomCount >= 4">
                        @Html.Partial("/Views/Shared/B2BTravorama/Occupancies.cshtml", new OccupancyModel { Order = 3 })
                    </div>
                    <div ng-show="hotelSearch.roomCount >=5">
                        @Html.Partial("/Views/Shared/B2BTravorama/Occupancies.cshtml", new OccupancyModel { Order = 4 })
                    </div>
                    <div ng-show="hotelSearch.roomCount >= 6">
                        @Html.Partial("/Views/Shared/B2BTravorama/Occupancies.cshtml", new OccupancyModel { Order = 5 })
                    </div>
                    <div ng-show="hotelSearch.roomCount >= 7">
                        @Html.Partial("/Views/Shared/B2BTravorama/Occupancies.cshtml", new OccupancyModel { Order = 6 })
                    </div>
                    <div ng-show="hotelSearch.roomCount >= 8">
                        @Html.Partial("/Views/Shared/B2BTravorama/Occupancies.cshtml", new OccupancyModel { Order = 7 })
                    </div>
                    <div class="clearfix m-t-20">
                        <button class="btn btn-primary" type="submit" ng-click="hotelSearch.getHotels()">Cari Hotel</button>
                    </div>
                </form>
            </div>
        </div>
    }

    @Html.Partial("/Views/Shared/B2BTravorama/_SearchHotel.cshtml")
</div>