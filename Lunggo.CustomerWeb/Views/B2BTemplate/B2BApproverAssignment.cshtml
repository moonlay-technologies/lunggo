@using System.Globalization
@using Lunggo.ApCommon.Constant
@using Lunggo.Framework.Config
@{
    ViewBag.SiteHeader = "header-email";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
</head>
<body style="background-color:#F4F4F4; color:#535353; font-family:arial, helvetica, sans-serif; font-size:13px;">


    <table style="margin-left:auto; margin-right:auto; width:100%; max-width:700px; display:block; background:#ffffff;">
        <thead width="100%">
            <tr width="100%">
                <th width="5%"></th>
                <th width="90%" style="padding-top:30px;">
                    <p style="text-align:right;">
                        <a href="http://travorama.com" style="text-decoration:none;">
                            <img src="@(ConfigManager.GetInstance().GetConfigValue("general", "rootUrl") + @"/Assets/images/travorama-logo-color.png")" alt="Travorama" />
                        </a>
                        <br />
                    </p>
                </th>
                <th width="5%"></th>
            </tr>
        </thead>
        <tbody width="100%">
            <tr width="100%">
                <td width="5%"></td>
                <td width="90%">
                    <!-- CONTENT  -->
                    <!-- Booker/Approver Name  -->
                    <p style="font-size:16px;"><b>Dear <span style="color: #15b1e4;"> @Model.Contact.Name </span></b></p>

                    <!-- Start For Booker  -->
                    <p style="font-size:12px;">
                        [Approver Name] telah ditetapkan sebagai penyetuju reservasi Anda. Nantinya setiap reservasi yang Anda lakukan akan membutuhkan persetujuan darinya.
                    </p>
                    <p style="font-size:12px;">
                        Detail penyetuju Anda:
                        [For Approver] Detail pegawai Anda:
                    </p>
                    <!-- End For Booker  -->

                    <!-- Start For Approver  -->
                    <p style="font-size:12px;">
                        Anda telah ditetapkan sebagai penyetuju reservasi [Booker Name]. Nantinya setiap reservasi yang dibuat akan membutuhkan persetujuan Anda.
                    </p>
                    <p style="font-size:12px;">
                        Detail pegawai Anda:
                    </p>
                    <!-- End For Booker  -->

                    <table width="100%" style="margin-bottom: 40px;" cellpadding="0" cellspacing="0">
                        <tr>
                            <td width="10%">
                                <p style="">Nama</p>
                            </td>
                            <td width="1%"><p>:</p></td>
                            <td width="30%">
                                <p style="">Nama</p>
                            </td>
                        </tr>
                        <tr>
                            <td width="10%">
                                <p style="">Jabatan</p>
                            </td>
                            <td width="1%"><p>:</p></td>
                            <td width="30%">
                                <p style="">CTO</p>
                            </td>
                        </tr>
                        <tr>
                            <td width="10%">
                                <p style="">Departemen</p>
                            </td>
                            <td width="1%"><p>:</p></td>
                            <td width="30%">
                                <p style="">Production</p>
                            </td>
                        </tr>
                        <tr>
                            <td width="10%">
                                <p style="">Cabang</p>
                            </td>
                            <td width="1%"><p>:</p></td>
                            <td width="30%">
                                <p style="">Tangsel</p>
                            </td>
                        </tr>
                        <tr>
                            <td width="10%">
                                <p style="">E-mail</p>
                            </td>
                            <td width="1%"><p>:</p></td>
                            <td width="30%">
                                <p style="">email@domain.com</p>
                            </td>
                        </tr>
                        <tr>
                            <td width="10%">
                                <p style="">Keperluan</p>
                            </td>
                            <td width="1%"><p>:</p></td>
                            <td width="30%">
                                <p style="">Lorem ipsum</p>
                            </td>
                        </tr>
                    </table>
                </td>
                <td width="5%"></td>
            </tr>
        </tbody>
    </table>
</body>
</html>