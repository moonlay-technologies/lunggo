@using System.Globalization
@model List<Lunggo.ApCommon.Flight.Model.FlightReservationForDisplay>
@{
    Layout = "/Views/Shared/B2BTravorama/_B2BLayout.cshtml";
    ViewBag.BodyClass = "b2b-order-list flight";
    ViewBag.SiteHeader = "b2b-order-list";
    ViewBag.Title = "Order List Flight";
    ViewBag.AngularController = "";

}

@section AdditionalCSS{
}

@section AdditionalJS{
    <script src="/Assets/B2BTravorama/assets/plugins/jquery-datatable/media/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="/Assets/B2BTravorama/assets/plugins/jquery-datatable/extensions/TableTools/js/dataTables.tableTools.min.js" type="text/javascript"></script>
    <script src="/Assets/B2BTravorama/assets/plugins/jquery-datatable/media/js/dataTables.bootstrap.js" type="text/javascript"></script>
    <script src="/Assets/B2BTravorama/assets/plugins/jquery-datatable/extensions/Bootstrap/jquery-datatable-bootstrap.js" type="text/javascript"></script>
    <script type="text/javascript" src="/Assets/B2BTravorama/assets/plugins/datatables-responsive/js/datatables.responsive.js"></script>
    <script type="text/javascript" src="/Assets/B2BTravorama/assets/plugins/datatables-responsive/js/lodash.min.js"></script>
}

@section PageJS{
    <script src="/Assets/B2BTravorama/assets/js/form_elements.js" type="text/javascript"></script>
    <script src="/Assets/B2BTravorama/assets/js/tables.js" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function ($) {
            $('.sort-content, .filter-content').hide();

            $('#btn-um-filter').click(function () {
                $('.filter-content').show();
                $(this).css('background', '#eee');
                $('#btn-um-sort').css('background', '#fff');
                $('.sort-content').hide();
            });

            $('#btn-um-sort').click(function () {
                $('.sort-content').show();
                $(this).css('background', '#eee');
                $('#btn-um-filter').css('background', '#fff');
                $('.filter-content').hide();
            });

            $('#btn-um-add').click(function () {
                $('#btn-um-filter, #btn-um-sort').css('background', '#fff');
                $('.sort-content, .filter-content').hide();
            });

            $('.close-btn').click(function () {
                $(this).closest('.menu-wrapper').hide();
                $('#btn-um-filter, #btn-um-sort').css('background', '#fff');
            });

            $('#datepicker-range').datepicker();
        });
    </script>
}

<div class="order-list">
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <div class="panel-title">
                Order List Tiket Pesawat
            </div>
        </div>
        <div class="panel-body bg-white">
            <div class="fs-container">
                <div class="clearfix">
                    <div class="btn-group btn-group-justified">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default no-padding p-t-10 p-b-10" id="btn-um-sort">
                                <span class="m-r-5">
                                    <i class="fa fa-calendar fs-15"></i>
                                </span>
                                <span class="fs-12 bold font-montserrat text-uppercase">Tampilkan Tanggal</span>
                            </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default no-padding p-t-10 p-b-10" id="btn-um-filter">
                                <span class="m-r-5">
                                    <i class="fa fa-filter fs-15"></i>
                                </span>
                                <span class="fs-12 bold font-montserrat text-uppercase">Filter</span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="bg-white" style="border: 1px solid rgba(230, 230, 230, 0.7); border-top: none" id="sf-container">
                    <div class="sort-content menu-wrapper">
                        <div class="panel-heading">
                            <span class="fs-11 bold font-montserrat text-uppercase">Tampilkan Tanggal dari:</span>
                            <span class="pull-right pg-close_line close-btn" style="cursor: pointer;"></span>
                        </div>
                        <div class="panel-body m-t-10">
                            <div class="clearfix">
                                <div class="col-sm-4">
                                    <div class="input-daterange input-group m-b-15" id="datepicker-range">
                                        <input type="text" class="input-sm form-control" name="start" />
                                        <span class="input-group-addon font-montserrat bold text-uppercase fs-12 p-l-10 p-r-10">Sampai</span>
                                        <input type="text" class="input-sm form-control" name="end" />
                                    </div>
                                </div>
                                <div class="col-sm-8 no-padding">
                                    <button class="btn btn-primary btn-cons m-l-15">Cari</button>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="filter-content menu-wrapper">
                        <div class="panel-heading">
                            <span class="fs-11 bold font-montserrat text-uppercase">Filter Berdasarkan</span>
                            <span class="pull-right pg-close_line close-btn" style="cursor: pointer;"></span>
                        </div>
                        <div class="panel-body m-t-10">
                            <div class="clearfix">
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label>Status</label>
                                        <div class="">
                                            <span class="checkbox check-primary">
                                                <input type="checkbox" value="1" id="checkbox-approved">
                                                <label for="checkbox-approved">Approved</label>
                                            </span>
                                            <span class="checkbox check-primary">
                                                <input type="checkbox" value="1" id="checkbox-rejected">
                                                <label for="checkbox-rejected">Rejected</label>
                                            </span>
                                            <span class="checkbox check-primary">
                                                <input type="checkbox" value="1" id="checkbox-pending">
                                                <label for="checkbox-pending">Pending</label>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group typehead" id="sample-three">
                                        <label>Jabatan</label>
                                        <input class="typeahead form-control sample-typehead" type="text" placeholder="Cari Berdasarkan Jabatan">
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group typehead" id="sample-three">
                                        <label>Departemen</label>
                                        <input class="typeahead form-control sample-typehead" type="text" placeholder="Cari Berdasarkan Departemen">
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group typehead" id="sample-three">
                                        <label>Cabang</label>
                                        <input class="typeahead form-control sample-typehead" type="text" placeholder="Cari Berdasarkan Cabang">
                                    </div>
                                </div>
                            </div>
                            <div class="padding-15">
                                <button class="btn btn-primary btn-cons">Cari</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover" id="basicTable">
                    <thead>
                        <tr>
                            <th style="width:1%; padding: 0"></th>
                            <th style="width:11.11111111111111%; padding: 20px 12px; cursor: pointer;">Tanggal Reservasi<i class="fa fa-sort fs-15 m-l-5"></i></th>
                            <th style="width:11.11111111111111%; padding: 20px 12px">No. Reservasi</th>
                            <th style="width:11.11111111111111%; padding: 20px 12px">Tanggal Penerbangan</th>
                            <th style="width:13.11111111111111%; padding: 20px 12px">Pesawat</th>
                            <th style="width:12.11111111111111%; padding: 20px 12px">Rute</th>
                            <th style="width:11.11111111111111%; padding: 20px 12px">Harga</th>
                            <th style="width:11.11111111111111%; padding: 20px 12px">Booked By</th>
                            <th style="width:11.11111111111111%; padding: 20px 12px">Approved By</th>
                            <th style="width:7.11111111111111%; padding: 20px 12px">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rsv in Model)
                        {
                            <tr>
                                <td class="v-align-middle no-padding"></td>
                                <td class="v-align-middle padding-10">
                                    <div>@rsv.RsvTime.ToString("d MMM yyyy", CultureInfo.CreateSpecificCulture("id-ID"))</div>
                                    <div>@rsv.RsvTime.ToString("HH:mm:ss", CultureInfo.CreateSpecificCulture("id-ID"))</div>
                                </td>
                                <td class="v-align-middle padding-10">
                                    <div>@rsv.RsvNo</div>
                                </td>
                                <td class="v-align-middle padding-10">
                                    <div>
                                        @rsv.Itinerary.Trips[0].DepartureDate.Value.ToString("d MMM yyyy", CultureInfo.CreateSpecificCulture("id-ID"))
                                        &nbsp;
                                        @(rsv.Itinerary.Trips.Count > 1 ? rsv.Itinerary.Trips[1].DepartureDate.Value.ToString("d MMM yyyy", CultureInfo.CreateSpecificCulture("id-ID")) : "")
                                    </div>
                                </td>
                                <td class="v-align-middle padding-10">
                                    <div>Lion Air</div>
                                </td>
                                <td class="v-align-middle padding-10">
                                    <div>@rsv.Itinerary.Trips[0].OriginCity - @rsv.Itinerary.Trips[0].DestinationCity</div>
                                </td>
                                <td class="v-align-middle padding-10">
                                    <div>Rp @rsv.Payment.FinalPrice</div>
                                </td>
                                <td class="v-align-middle padding-10">
                                    <div>@rsv.Booker.Name</div>
                                </td>
                                <td class="v-align-middle padding-10">
                                    <div>@rsv.Approver.Name</div>
                                </td>
                                <td class="v-align-middle padding-10">
                                    <span class="label label-success">@rsv.RsvDisplayStatus</span>
                                </td>
                                @*<td class="v-align-middle padding-10">
                                        <p>@rsv.Itinerary.TripType</p>
                                    </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>