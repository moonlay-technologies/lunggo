
@model Lunggo.CustomerWeb.Models.CalendarRecipientData

@{
    Layout = "/Views/Shared/Travorama20/_Layout20150929.cshtml";
    ViewBag.BodyClass = "page-static page-contact";
    ViewBag.Title = "Get 2016 Calendar Campaign";
}

@if (ViewBag.Message == null)
{

    <div class="container">

        <h1 class="text-center section-title stripe">GET <span>2016</span> CALENDAR</h1>

        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Email)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                
                        <div class="form-group">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PostalCode, htmlAttributes: new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-5">
                                <input type="submit" value="Submit" class="btn btn-yellow btn-block" />
                            </div>
                        </div>
                    </div><!-- .form-horizontal -->
                }
            </div><!-- .col -->
        </div><!-- .row -->

    </div><!-- .container -->
    
}
else if (ViewBag.Message == "InputSuccess")
{
    <div class="col-sm-8">
        <p align="center" style="font-size:20px; margin-bottom:40px;margin-top:50px;">Terima kasih,Kami akan mengirimkan kalendar ke alamat yang telah anda masukkan</p>
        <div class="col-sm-4 col-sm-offset-4">
            <a class="btn btn-yellow btn-block" href="@Url.Action("Login", "Account")">LOGIN</a>
        </div>
    </div>
}
else if (ViewBag.Message == "MasaBerlakuTelahHabis")
{
    <div class="col-sm-8">
         <p align="center" style="font-size:20px; margin-bottom:40px;margin-top:50px;">Mohon Maaf, Masa berlaku event ini telah habis.</p>
        <div class="col-sm-4 col-sm-offset-4">
            <br /><br />
            <a class="btn btn-yellow btn-block" href="@Url.Action("Login", "Account")">LOGIN</a>
        </div>
    </div>
}
else
{
    <div class="col-sm-8">
         <p align="center" style="font-size:20px; margin-bottom:40px; margin-top:50px;">Anda telah terdaftar di data kami</p>
        <div class="col-sm-4 col-sm-offset-4">
            <br/><br/>
            <a class="btn btn-yellow btn-block" href="@Url.Action("Login", "Account")">LOGIN</a>
        </div>
    </div>
}

