    <div class=" container-page">
        <div class="promo-list">
            <p>
                <a href="@Url.Action("OnlineRevolution", "Promo")"><div class="img-promo" style="background-image: url(/Assets/images/campaign/OnlineRevolution2016/OnlineRevolution-page-mobile.jpg);"></div></a>
