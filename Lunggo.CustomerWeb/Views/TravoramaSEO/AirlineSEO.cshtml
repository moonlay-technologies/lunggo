                        </a>
                    </div>
                }
                @if (DateTime.UtcNow.AddHours(7).Date >= new DateTime(2017, 03, 25) && DateTime.UtcNow.AddHours(7).Date <= new DateTime(2017, 08, 27))
                {
                    <div class="slider">
                        <a href="@Url.Action("PaydayMadnessPermataBank", "Promo")">
                            <img src="/Assets/images/campaign/PaydayMadness/PaydayMadness-slider.jpg" alt="JOINT PROMO VIRTUAL ACCOUNT PERMATA BANK" />
                        </a>
                    </div>
                }
                <div class="slider">
                    <a href="@Url.Action("TravoramaMobileApp","StaticPage")">
                        <img src="/Assets/images/campaign/MobileApp/mobile-app-banner.jpg" alt="Download Travorama Mobile App" />
                    </a>
                </div>
                <div class="slider">
                    <a href="#">
                        <img src="/Assets/images/default-banner.jpg" alt="Travorama" />
                    </a>
                </div>
            </div>
        </div><!-- .slider -->
    }
    else
    {
        <div class="page-slider" style="background-image:url('/Assets/images/campaign/@(ViewBag.DestinationName.Replace(" ","")).jpg');">
            <div class="slider-text hidden">
                <h1><img src="/Assets/images/enjoyyoureverymoment.png" alt="Enjoy Your Every Moment" /></h1>
                <p>Ke mana pun Anda ingin bepergian, kami menyediakan pilihan penerbangan <br /> domestik dan internasional dari 900 maskapai</p>
            </div>
        </div><!-- .slider -->
    }

