@{
    Layout = "/Views/Shared/mobile/_Layout.cshtml";
    ViewBag.Title = "Login";
    ViewBag.BodyClass = "page page-account page-login";
    ViewBag.AngularController = "LoginController";
}
@section AdditionalJS {
    <!-- additional Angular JS-->
    <script src="/Assets/js/angular.min.js"></script>
    <script src="/Assets/js/angular-animate.min.js"></script>
    <script src="/Assets/js/angular-route.min.js"></script>
}
@section PageJS{
    <script>
        var LoginMessage = '@ViewBag.Message';
    </script>
    <!-- angular controller -->
    <script src="/Assets/mobile/js/AccountController.js"></script>
}

<div class="error-message bg-warning" ng-show="User.Message">
    <div ng-show="User.Message == 'NotRegistered'">
        <h3>Anda belum terdaftar di Travorama</h3>
        <p><a href="@Url.Action("Register", "Account")">Klik disini</a> untuk mendaftar di Travorama.</p>
    </div>
    <div ng-show="User.Message == 'InvalidInputData'">
        <h3>Email / Password Salah</h3>
        <p>Cek kembali alamat email dan password Anda.</p>
    </div>
    <div ng-show="User.Message == 'Failed'">
        <h3>Email / Password Salah</h3>
        <p>Cek kembali alamat email dan password Anda.</p>
    </div>
    <div ng-show="User.Message == 'AlreadyRegisteredButUnconfirmed'">
        <h3>Akun Belum Aktif</h3>
        <p>Cek kembali alamat email Anda untuk mengaktifkan akun Anda.</p>
    </div>
    <div ng-show="User.Message == 'AlreadyConfirmed'">
        <h3>Akun Anda Telah Aktif</h3>
        <p>Silahkan login menggunakan email dan password Anda.</p>
    </div>
</div>

<div class="container">

    <div class="form-wrapper form-wrapper--login">
    
        <header class="form-wrapper__header">
            <h1 class="form-wrapper__title">Log In</h1>
            <p>Dengan Akun Travorama Anda</p>
        </header><!-- .form-wrapper__header -->

        <div class="form-wrapper__body">
            @using (Html.BeginForm("Login", "Account", new {returnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "login-form form form-horizontal", role = "form", name = "LoginForm", ng_submit = "User.Send()"}))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="control-label">Alamat Email Anda :</label>
                    <input type="email" value="" name="Email" class="form-control" ng-model="User.Email" required />
                </div>
                <div class="form-group">
                    <label class="control-label">Password :</label>
                    <input type="password" value="" name="Password" class="form-control" ng-model="User.Password" required />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-yellow btn-block" ng-disabled="LoginForm.$invalid || User.Sending">LOGIN</button>
                </div>
                <div class="form-group">
                    <a href="#">Lupa Password</a> | <a href="#">Daftar</a>
                </div>
            }
        </div><!-- .form-wrapper__body -->

    </div><!-- .form-wrapper -->
</div><!-- .container -->