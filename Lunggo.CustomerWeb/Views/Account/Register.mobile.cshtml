@{
    Layout = "/Views/Shared/_layout_mobile.cshtml";
    ViewBag.Title = "Register Page";
    var loginProviders = Context.GetOwinContext().Authentication.GetAuthenticationTypes();
    var facebookProvider = loginProviders.First();
}

@switch ((string)ViewBag.Message)
{
    case "InvalidInputData":
        <div class="bg-danger">Email format invalid!</div>
        break;
    case "ConfirmationEmailSent":
    <div class="bg-warning">Confirmation email has been sent. Please confirm your email through link on that email.</div>
        break;
    case "AlreadyRegistered":
    <div class="bg-warning">Email already registered.</div>
        break;
    case "AlreadyRegisteredButUnconfirmed":
    <div class="bg-warning">Email already registered but not confirmed. Please confirm.</div>
        break;
    case "Failed":
    <div class="bg-danger">There is an error. Please try again later.</div>
        break;
}

<section class="page register-page auth-page">

    <h1 class="text-center page-title"><b>SIGN</b> UP</h1>
    <h5 class="text-center page-subtitle">And start milking benefit</h5>

    <section class="login-form-section container">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "login-form form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <span class="fa fa-envelope-o col-xs-2"></span>
                <div class="col-xs-10 col-xs-offset-1">
                    <input type="text" name="Email" placeholder="Enter your email" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-10 col-xs-offset-1">
                    <input type="submit" name="submit" value="REGISTER" class="btn btn-yellow submit-button btn-block-lg" />
                </div>
            </div>
        }
