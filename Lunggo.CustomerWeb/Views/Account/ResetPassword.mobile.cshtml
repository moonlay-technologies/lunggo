@model Lunggo.CustomerWeb.Models.ResetPasswordViewModel
@{
    Layout = "/Views/Shared/mobile/_Layout.cshtml";
    ViewBag.Title = "Reset Password";
    ViewBag.BodyClass = "page-resetpassword page-password";
    ViewBag.AngularController = "ResetpasswordController";
}
@section AdditionalJS {
    <!-- additional Angular JS-->
    <script src="/Assets/js/angular.min.js"></script>
    <script src="/Assets/js/angular-animate.min.js"></script>
    <script src="/Assets/js/angular-route.min.js"></script>
}
@section PageJS{
    <!-- angular controller -->
    <script src="/Assets/mobile/js/AccountController.js"></script>
    <script>
        var langCode = 'en';
        var userEmail = '@Model.Email';
        var code = '@Model.Code';
    </script>

}

<div class="page-loaded">
    <header class="page__header">
        <h1 class="text-center section-title stripe">Reset <span>Password</span></h1>
    </header>

    <div class="page__body">


        <div class="container" ng-show="!form.submitted && !form.lala">
            <p>Reset password Anda</p>
        </div>
        <div class="container" ng-show="!form.submitted && !form.lala">
            <form name="ResetPasswordForm" novalidate>
                <div class="form-group">
                    <label class="control-label">Password Baru Anda:</label>
                    <input type="hidden" value="{{form.code}}" name="code" />
                    <input type="hidden" value="{{form.userEmail}}" name="userEmail" />
                    <input class="form-control" type="password" value="" ng-model="form.password" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-yellow" ng-click="submit()" ng-disabled="form.submitting">
                        <span ng-show="!form.submitting">RESET PASSWORD</span>
                        <span ng-show="form.submitting">MENGIRIM</span>
                    </button>
                </div>
            </form>
        </div>

        <div class="form-container-sent" ng-show="form.submitted && !form.lala">

        <div class="container">
            <div class="text-center">
                <img src="/Assets/images/lock-image.jpg" alt="Password Reset Berhasil" />
            </div>
            <h3 class="text-center">Reset Password Anda telah <b>berhasil.</b></h3>
            <p class="text-center"></p>
            <div class="text-center">
                <a href="/" class="btn btn-yellow">KEMBALI KE HALAMAN DEPAN</a>
            </div>

        </div>
           
        
    </div><!-- .form-sent -->

        <div class="container" ng-show="form.lala">
            @*<div class="text-center">
                <img src="/Assets/images/lock-image.jpg" alt="Password Reset Gagal" />
            </div>*@
            <h3 class="text-center">Reset Password Anda tidak <b>berhasil.</b></h3>
            <p class="text-center"></p>
            <div class="text-center">
                <a href="/" class="btn btn-yellow">KEMBALI KE HALAMAN DEPAN</a>
            </div>

        </div>
    </div><!-- .page__body -->
</div>
