@model Lunggo.CustomerWeb.Models.ResetPasswordViewModel
@{
    Layout = "/Views/Shared/_Layout_account.cshtml";
    ViewBag.Title = "Reset password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" type="image/ico" href="/Assets/images/favico.ico" />

    <title>Travorama</title>

    <!-- stylesheets -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/css/application.css">

</head>
<body>
    <!-- page start -->
    <div class="page user-page user-page-register">

        <section class="user-register">
            <header id="site-header" class="site-header">
                @{ Html.RenderPartial("_Mainmenu"); }
            </header>

            @switch ((string)ViewBag.Message)
            {
                case "InvalidInputData":
                    <div class="bg-danger">Password does not match!</div>
                    break;
                case "NotRegistered":
                <div class="bg-warning">Email not registered.</div>
                    break;
                case "AlreadyRegisteredButUnconfirmed":
                <div class="bg-warning">Email already registered but not confirmed. Please confirm.</div>
                    break;
                case "Failed":
                <div class="bg-danger">There is an error. Please try again later.</div>
                    break;
            }
            <div class="container">
                <section class="user-form">
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>Reset your password.</h4>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Code)
                        @Html.HiddenFor(m => m.Email, new { @class = "form-control" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Reset" />
                            </div>
                        </div>
                    }
                </section>
            </div>

        </section><!-- .user-login -->
        <!-- site content start -->
        <div id="site-content" class="site-content">

            <div class="container">
                <section class="benefit">
                    <h3 class="text-center"><b>@Html.I18NString("CW00132")</b> @Html.I18NString("CW00133")</h3>
                    <hr>
                    <div class="row">
                        <div class="col-sm-6">
                            <article class="media">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img src="/assets/images/benefit/news.png" alt="Latest News">
                                    </div>
                                    <div class="col-sm-8">
                                        <h4>@Html.I18NString("CW00134")</h4>
                                        <p>@Html.I18NString("CW00135")</p>
                                    </div>
                                </div>
                            </article>
                            <article class="media">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img src="/assets/images/benefit/discount.png" alt="Discount">
                                    </div>
                                    <div class="col-sm-8">
                                        <h4>@Html.I18NString("CW00136")</h4>
                                        <p>@Html.I18NString("CW00137")</p>
                                    </div>
                                </div>
                            </article>
                        </div>
                        <div class="col-sm-6">
                            <article class="media">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img src="/assets/images/benefit/check.png" alt="Check">
                                    </div>
                                    <div class="col-sm-8">
                                        <h4>@Html.I18NString("CW00138")</h4>
                                        <p>@Html.I18NString("CW00139")</p>
                                    </div>
                                </div>
                            </article>
                            <article class="media hidden">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img src="/assets/images/benefit/refund.png" alt="refund">
                                    </div>
                                    <div class="col-sm-8">
                                        <h4>REFUND SYSTEM</h4>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Atque odio non, sed perspiciatis dolor officia dolorum ipsam consequatur, id molestiae facilis, a nulla iusto velit quae mollitia cupiditate veritatis totam.</p>
                                    </div>
                                </div>
                            </article>
                        </div>
                    </div>
                </section>
            </div><!-- .container -->
