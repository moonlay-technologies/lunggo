@model Lunggo.CustomerWeb.Models.ForgotPasswordViewModel

@{
    Layout = "/Views/Shared/mobile/_Layout.cshtml";
    ViewBag.Title = "Lupa Password";
    ViewBag.BodyClass = "page page-account page-forgotpassword";
    ViewBag.AngularController = "ForgotpasswordController";
    var loginProviders = Context.GetOwinContext().Authentication.GetAuthenticationTypes();
    var facebookProvider = loginProviders.First();
}
@section AdditionalJS {
    <!-- additional Angular JS-->
    <script src="/Assets/js/angular.min.js"></script>
    <script src="/Assets/js/angular-animate.min.js"></script>
    <script src="/Assets/js/angular-route.min.js"></script>
}
@section PageJS{
    <!-- angular controller -->
    <script src="/Assets/mobile/js/AccountController.js"></script>
}


@switch ((string)ViewBag.Message)
{
    case "InvalidInputData":
        <div class="bg-danger">Email format invalid!</div>
        break;
    case "NotRegistered":
    <div class="bg-warning">Email not yet registered. Please<a href="@Url.Action("Register", "Account")">register</a>.</div>
        break;
    case "AlreadyRegisteredButUnconfirmed":
    <div class="bg-warning">Email already registered but not confirmed. Please confirm.</div>
        break;
    case "Success":
    <div class="bg-success">Reset email sent. Please check.</div>
        break;
}

<div class="page-loaded">
    <header class="page__header">
        <h1 class="text-center section-title stripe">Lupa <span>Password</span></h1>
    </header>

    <div class="page__body">

        <div class="container">
            <p>Masukan alamat email Anda dan kami akan mengirimkan email instruksi untuk mengganti password Anda.</p>
        </div>
        <div class="container">
            <form name="ForgotPasswordForm" novalidate>
                <div class="form-group">
                    <label class="control-label">Alamat Email Anda :</label>
                    <input class="form-control" type="email" value="" ng-model="EmailForm.Email" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-yellow" ng-click="EmailForm.SendForm()" ng-disabled="ForgotPasswordForm.$invalid || EmailForm.Sending">
                        <span ng-hide="EmailForm.Sending">KIRIM</span>
                        <span ng-show="EmailForm.Sending">MENGIRIM</span>
                    </button>
                </div>
            </form>
        </div>

    </div><!-- .page__body -->
</div>

