@using System.Web.UI.WebControls
@{
    Layout = "/Views/Shared/_Layout_account.cshtml";
    ViewBag.Title = "Hotel Detail";
    var loginProviders = Context.GetOwinContext().Authentication.GetAuthenticationTypes();
    var facebookProvider = loginProviders.First();
}
<!-- page start -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Travorama</title>

    <!-- stylesheets -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/css/application.css">

</head>
<body>
    <!-- page start -->
    <div class="page user-page user-page-login">

        @if (ViewBag.Message != null)
        {
            <div class="container">
                <h2>Thank you for verifying your email. Please login.</h2>
            </div>
        }

        <section class="user-login">
            <header id="site-header" class="site-header">
                @{ Html.RenderPartial("_Mainmenu"); }
            </header>

            <div class="container">
                <section class="user-form">
                    <h1 class="text-center">@Html.I18NString("CW00129")</h1>
                    <h3 class="text-center">@Html.I18NString("CW00122")</h3>
                    @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form form form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-2">
                                <input type="text" class="form-control" name="Email" placeholder="@Html.I18NString("CW00123")">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-2">
                                <div class="row">
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control" name="Password" placeholder="@Html.I18NString("CW00124")">
                                    </div>
                                    <div class="col-sm-3">
                                        <button class="btn btn-yellow">@Html.I18NString("CW00130")</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-add">
                            <div class="col-sm-8 col-sm-offset-2">
                                <label for="login-remember"><input type="checkbox" id="login-remember" name="RememberMe"> <span>@Html.I18NString("CW00125")</span></label>
                                <p class="pull-right"> <a href="@Url.Action("ForgotPassword", "Account")">@Html.I18NString("CW00126")</a> | <a href="@Url.Action("Register", "Account")">@Html.I18NString("CW00127")</a></p>
                            </div>
                        </div>
                    }
                    @*
                        <div class="row">
                            <div class="col-sm-8 col-sm-offset-2">
                                <div class="or text-center">
                                    <span class="or-left"></span><span>@Html.I18NString("CW00128")</span><span class="or-right"></span>
                                </div>
                            </div>
                        </div>
                        @using (Html.BeginForm("ExternalLogin", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <section class="facebook-login text-center">
                                <button type="submit" name="provider" value="@facebookProvider.AuthenticationType"><span class="fa fa-facebook"></span> @Html.I18NString("CW00131")</button>
                            </section>
                        }
                    *@
                </section>
            </div>

        </section><!-- .user-login -->
        <!-- site content start -->
        <div id="site-content" class="site-content">

            <div class="container">
                <section class="benefit">
                    <h3 class="text-center"><b>@Html.I18NString("CW00132")</b> @Html.I18NString("CW00133")</h3>
                    <hr>
                    <div class="row">
                        <div class="col-sm-6">
                            <article class="media">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img src="/assets/images/benefit/news.png" alt="Latest News">
                                    </div>
                                    <div class="col-sm-8">
                                        <h4>@Html.I18NString("CW00134")</h4>
                                        <p>@Html.I18NString("CW00135")</p>
                                    </div>
                                </div>
                            </article>
                            <article class="media">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img src="/assets/images/benefit/discount.png" alt="Discount">
                                    </div>
                                    <div class="col-sm-8">
                                        <h4>@Html.I18NString("CW00136")</h4>
                                        <p>@Html.I18NString("CW00137")</p>
                                    </div>
                                </div>
                            </article>
                        </div>
                        <div class="col-sm-6">
                            <article class="media">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img src="/assets/images/benefit/check.png" alt="Check">
                                    </div>
                                    <div class="col-sm-8">
                                        <h4>@Html.I18NString("CW00138")</h4>
                                        <p>@Html.I18NString("CW00139")</p>
                                    </div>
                                </div>
                            </article>
                            <article class="media hidden">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img src="/assets/images/benefit/refund.png" alt="refund">
                                    </div>
                                    <div class="col-sm-8">
                                        <h4>REFUND SYSTEM</h4>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Atque odio non, sed perspiciatis dolor officia dolorum ipsam consequatur, id molestiae facilis, a nulla iusto velit quae mollitia cupiditate veritatis totam.</p>
                                    </div>
                                </div>
                            </article>
                        </div>
                    </div>
                </section>
            </div><!-- .container -->
