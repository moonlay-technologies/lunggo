        <div class="isi-syarat-ketentuan clearfix">
        @for (var i = 0; i < ViewBag.HowToGet.Count; i++ )
        {
            <div class="row container-list-ketentuan">
                <div class="col-xs-1 list-number-mobile">@(i+1)</div>
                <div class="col-xs-11 info-ketentuan bold-txt">@Html.Raw(ViewBag.HowToGet[i])</div>
            </div>
        }
        </div>
    </div>
    <div class="syarat-ketentuan" id="syarat-ketentuan">
        <div class="judul-rekomendasi-hotel clearfix">
            <div class="col-xs-10">Syarat & Ketentuan</div>
            <div class="col-xs-2 align-right hide-content-btn">
                <span class="glyphicon glyphicon-menu-up" aria-hidden="true"></span>
            </div>
        </div>
        <div class="isi-syarat-ketentuan clearfix">
        @for (var i = 0; i < ViewBag.Terms.Count; i++ )
        {
            <div class="row container-list-ketentuan">
                <div class="col-xs-1 list-number-mobile">@(i+1)</div>
                <div class="col-xs-11 info-ketentuan bold-txt">@Html.Raw(ViewBag.Terms[i])</div>
            </div>
        }
        </div>
