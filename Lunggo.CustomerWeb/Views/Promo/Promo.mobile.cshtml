@{
    Layout = "/Views/Shared/mobile/_LayoutMobile.cshtml";
    ViewBag.BodyClass = "page-promo promo-mobile promo-btn-mobile";
    ViewBag.AngularController = "PromoController";
}

@section AdditionalCSS {
    <link href="/Assets/css/promo.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/Assets/vendor/slick/slick.css" />
}

<div class="promo-btn">
    <div class="mini-banner">
        <a href="/"><img class="img-promo" src="@ViewBag.ImageSrcMobile" alt="@ViewBag.ImageAlt" /></a>
    </div>
    <div class="info-promo">
        <div class="judul-promo bold-txt"><h1>@ViewBag.PromoTitle</h1></div>
        <div class="desc-promo"><h2>@ViewBag.PromoDescription</h2></div>
        <div class="more-info">Info Lengkapnya di <a class="bold-txt" id="syarat-ketentuan-btn">Syarat dan Ketentuan</a></div>
        <div class="detail-promo">
            <div class="box-promo box-promo-kode clearfix">
                <div class="col-xs-8 info-box-promo">
                    <div class="judul-box-promo bold-txt">Kode Promo</div>
                    <div class="tanggal-box-promo">@ViewBag.KodePromo</div>
                </div>
                <div class="gambar-box-promo col-xs-4 align-right"><img src="/Assets/mobile/images/ticket.png" /></div>
            </div>
            <div class="box-promo clearfix">
                <div class="col-xs-8 info-box-promo">
                    <div class="judul-box-promo bold-txt">Periode Booking</div>
                    <div class="tanggal-box-promo">@ViewBag.PeriodeBooking</div>
                </div>
                <div class="gambar-box-promo col-xs-4 align-right"><img src="/Assets/images/calendar.png" /></div>
            </div>
            @if (ViewBag.PeriodeInap != null)
            {
            <div class="box-promo clearfix">
                <div class="col-xs-8 info-box-promo">
                    <div class="judul-box-promo bold-txt">Periode Inap</div>
                    <div class="tanggal-box-promo">@ViewBag.PeriodeInap</div>
                </div>
                <div class="gambar-box-promo col-xs-4 align-right"><img src="/Assets/mobile/images/inap.png" /></div>
            </div>
            }
            @if (ViewBag.PeriodeTerbang != null)
            {
            <div class="box-promo clearfix">
                <div class="col-xs-8 info-box-promo">
                    <div class="judul-box-promo bold-txt">Periode Terbang</div>
                    <div class="tanggal-box-promo">@ViewBag.PeriodeTerbang</div>
                </div>
                <div class="gambar-box-promo col-xs-4 align-right"><img src="/Assets/images/pesawat.png" /></div>
            </div>
            }
        </div>
        <div class="btn-book">
            <a href="/hotel"><div class="book-now">BOOK NOW</div></a>
        </div>
    </div>
