    @{Html.RenderPartial("/Views/common/subscribe-mobile.cshtml");}
    @Html.Partial("/Views/Shared/mobile/_SiteFooter.cshtml")
</div>

@section PageJS{
    <script src="/Assets/vendor/slick/slick.min.js"></script>
    <script type="text/javascript" src="/Assets/js/jquery.ui.datepicker-id.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui-touch-punch/0.2.3/jquery.ui.touch-punch.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/1.5.0/js.cookie.min.js"></script>
    <script src="/Assets/travorama20/js/partial/subscriptionForm.js"></script>
    <!-- angular controller -->
    <script src="/Assets/travorama20/js/PromoController.js"></script>
    <script src="/Assets/travorama20/angularDirectory/search/hotelSearch.service.js"></script>
    <script src="/Assets/mobile/js/HomeController.js"></script>
    <script type="text/javascript">
        $("#syarat-ketentuan-btn").click( function() {
            $('html, body').animate({
                //// value scrolltop = banyaknya pixel yang di scroll (ditutupin)
                //// angka 8 untuk margin aja biar rapi
                scrollTop: $("#syarat-ketentuan").offset().top - $("header").height() - 8
            }, 500);
        });
        $(".hide-content-btn").click( function() {
            //// hide the content element below
            $(this).parent().next().toggle(200);
        })
    </script>
}