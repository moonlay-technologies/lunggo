    <div class="langkah-promo">
        <div class="judul-rekomendasi-hotel clearfix">
            <div class="col-xs-10">Langkah Dapatkan Promo</div>
            <div class="col-xs-2 align-right hide-content-btn">
                <span class="glyphicon glyphicon-menu-up" aria-hidden="true"></span>
            </div>
        </div>
        <!-- <div class="carousel-inner-mobile slider-promo" role="listbox">
