@{
    Layout = "/Views/Shared/mobile/_LayoutMobile.cshtml";
    ViewBag.Title = "Promo Online Revolution 2016";
    ViewBag.BodyClass = "page-promo promo-mobile promo-imlek-mobile";
    ViewBag.AngularController = "PromoController";
}

@section AdditionalCSS {
    <link href="/Assets/css/promo.css" rel="stylesheet" />
}

@section AdditionalJS {
    <script src="/Assets/js/bootstrap.js"></script>
}

@section PageJS{
    <!-- angular controller -->
    <script src="/Assets/travorama20/js/PromoController.js"></script>
    <script src="/Assets/travorama20/angularDirectory/search/hotelSearch.service.js"></script>
}

<div class="promo-btn">
    <div class="mini-banner">
        <a href="/"><img class="img-promo" src="/Assets/images/campaign/Imlek2017/Imlek2017-page-mobile.jpg" alt="Travorama Imlek 2017" /></a>
    </div>
    <div class="tab-promo">
        <ul class="nav nav-tabs tab-detail">
            <li class="col-xs-6 active">
                <a data-toggle="tab" href="#tnc-promo">Syarat & Ketentuan</a>
            </li>
            <li class="col-xs-6">
                <a data-toggle="tab" href="#how-to">Cara Mendapatkan <br />Program Promo</a>
            </li>
        </ul>
        <div class="tab-content">
            <div id="tnc-promo" class="tab-pane active">
                <div class="container-page">
                    <div class="section-title text-center">Syarat & <span class="blue-text">Ketentuan</span></div>
                    <div class="tnc">
                        <ol class="list-number">
                            <li>Berlaku untuk pemesanan hotel domestik dan internasional.</li>
                            <li>Periode booking <span class="os-bold blue-text">28 Januari - 15 Februari 2017</span> untuk periode inap kapan saja.</li>
                            <li>Diskon sebesar 5% tanpa maksimum diskon.</li>
                            <li>Berlaku tanpa minimum transaksi.</li>
                            <li>Berlaku untuk semua metode pembayaran.</li>
                            <li>Program tidak dapat digabungkan dengan voucher dan promo lainnya.</li>
                            <li>Travorama berhak penuh untuk mengubah syarat dan ketentuan tanpa pemberitahuan terlebih dahulu.</li>
                        </ol>
                    </div>
                </div>
            </div>
            <div id="how-to" class="tab-pane">
                <div class="container-page">
                    <div class="section-title text-center">Cara Mendapatkan <br /><span class="blue-text">Program Promo</span></div>
                    <div class="how-to">
                        <ol class="list-number">
                            <li>Cari dan pesan hotel melalui situs Travorama.</li>
                            <li>Pilih metode pembayaran yang Anda inginkan.</li>
                            <li>Masukkan kode promo <span class="os-bold blue-text">'FIERYROOSTER'</span>, harga akan otomatis terpotong sesuai program promo.</li>
                            <li>E-voucher akan dikirimkan ke alamat email Anda.</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>