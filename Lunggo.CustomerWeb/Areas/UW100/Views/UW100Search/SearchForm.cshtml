@model Lunggo.CustomerWeb.Areas.UW100.Models.UW100SearchParamViewModel
@{
    ViewBag.Title = "SearchForm";
    Dictionary<int, string> Rooms = new Dictionary<int, string>();
    Dictionary<int, string> Guests = new Dictionary<int, string>();
    for (int i = 1; i < 5; i++)
    {
        if(i==1){
            Rooms[i] = i + " Room";
            Guests[i] = i + " Adult";
        }
        else
        {
            Rooms[i] = i + " Rooms";
            Guests[i] = i + " Adults";
        }
    }
}


<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="background-color:gray;padding:5px;border:1px solid thin">
    <div style="background-color:white;padding:10px;">
        @using (Html.BeginRouteForm("UW100SearchHotel", FormMethod.Post, new { role = "form", @class = "form-horizontal", style = "padding:0px;" }))
        {
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    @Html.TextBoxFor(m => m.Keyword, new { @class = "input-sm form-control", placeholder = "Type in city or country" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    Checkin
                    <input type="text" class="input-sm form-control" data-control="datetime" placeholder="CheckIn" value="@DateTime.Now.ToString("dd/MM/yyyy")" name="@Html.NameFor(model => model.StringChkInDate)" />
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    Checkout
                    <input type="text" class="input-sm form-control" data-control="datetime" placeholder="Checkout" value="@DateTime.Now.AddDays(2).ToString("dd/MM/yyyy")" name="@Html.NameFor(model => model.StringChkOutDate)" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    @Html.DropDownListFor(model => model.RoomCount, new SelectList(Rooms, "key", "value", 1), new { @class = "form-control" })
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    @Html.DropDownListFor(model => model.GuestCount, new SelectList(Guests, "key", "value", 2), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <button type="submit" class="btn btn-block">Search</button>
                </div>
            </div>
        }
    </div>
</div>