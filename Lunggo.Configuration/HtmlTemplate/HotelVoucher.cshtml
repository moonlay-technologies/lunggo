@using System.Globalization
@using Lunggo.ApCommon.Hotel.Service
@model Lunggo.ApCommon.Hotel.Model.HotelReservationForDisplay
@{
    ViewBag.SiteHeader = "header-email";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
</head>
<body style="background-color:#F4F4F4; color:#535353; font-family:arial, helvetica, sans-serif; font-size:12px; margin: 0; padding: 0; min-width: 100%!important;">
    <table width="100%" border="0" cellpadding="0" cellspacing="0">
        <tbody>
            <tr>
                <td>
                    <table style="background: #fff; width: 100%; max-width: 700px;" align="center" cellpadding="0" cellspacing="0" border="0">
                        <tbody>
                            <tr>
                                <td style="padding: 40px 30px;">
                                    <table width="320px" align="left" border="0" cellpadding="0" cellspacing="0">
                                        <tbody>
                                            <tr>
                                                <td style="">
                                                    <a href="http://travorama.com" style="text-decoration:none;">
                                                        <img style="width: 130px;" src="/Assets/images/travorama-logo-color.png" alt="Travorama" />
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <table width="320px" align="left" border="0" cellpadding="0" cellspacing="0">
                                        <tbody>
                                            <tr>
                                                <td style="font-size: 24px; text-align: right; line-height: 40px;">
                                                    <b>HOTEL <span style="color: #15b1e4;">VOUCHER</span></b>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 0 30px;">
                                    <table width="640px" align="left" border="0" cellpadding="0" cellspacing="0">
                                        <tbody>
                                            <tr>
                                                <td style="padding-bottom: 20px;">
                                                    <p style="border-bottom: 2px solid #15b1e4; margin-bottom: 20px;">
                                                        <img style="padding-right: 5px;" src="/Assets/images/phone.png" /><span style="color: #15b1e4;">021 1234 5678</span>
                                                        <img style="padding-right: 5px; padding-left: 15px;" src="/Assets/images/email/mail.png" /><span style="color: #15b1e4;">cs@travorama.com</span>
                                                    </p>
                                                    <p style="margin-bottom: 0;">
                                                        <img style="width: 640px" src="/Assets/images/voucher-hotel-bg.jpg" />
                                                    </p>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 0 30px 15px;">
                                    <table width="160px" align="left" border="0" cellpadding="0" cellspacing="0">
                                        <tbody>
                                            <tr>
                                                <td style="">
                                                    <p style="color: #525252; font-size: 12px;">Nomor Reservasi</p>
                                                    <p style="color: #0c84b1; font-size: 15px;"><b>@Model.RsvNo</b></p>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <table width="480px" align="left" border="0" cellpadding="0" cellspacing="0">
                                        <tbody>
                                            <tr>
                                                <td style="padding-left: 30px; border-left: 1px solid #ddd;">
                                                    <p style="font-size: 15px; text-transform: uppercase; color: #15b1e4;"><b>@Model.HotelDetail.HotelName</b></p>
                                                    @if (Model.HotelDetail.StarRating == 1)
                                                    {
                                                        <p><img src="/Assets/images/hotel-star-1.png" /></p>
                                                    }
                                                    @if (Model.HotelDetail.StarRating == 2)
                                                    {
                                                        <p><img src="/Assets/images/hotel-star-2.png" /></p>
                                                    }
                                                    @if (Model.HotelDetail.StarRating == 3)
                                                    {
                                                        <p><img src="/Assets/images/hotel-star-3.png" /></p>
                                                    }
                                                    @if (Model.HotelDetail.StarRating == 4)
                                                    {
                                                        <p><img src="/Assets/images/hotel-star-4.png" /></p>
                                                    }
                                                    @if (Model.HotelDetail.StarRating == 5)
                                                    {
                                                        <p><img src="/Assets/images/hotel-star-5.png" /></p>
                                                    }
                                                    <p style="color: #525252;">
                                                        <img src="/Assets/images/location.png" /> @Model.HotelDetail.Address, @Model.HotelDetail.City
                                                    </p>
                                                    <p style="color: #525252;">
                                                        <img src="/Assets/images/phone.png" /> @Model.HotelDetail.PhonesNumbers[0]
                                                    </p>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 0 30px 40px;">
                                    <table width="640px" align="left" border="0" cellpadding="0" cellspacing="0" style="border-top: 1px solid #ddd;">
                                        <tbody>
                                            <tr>
                                                <td style="">
                                                    <p style="font-size: 15px; color: #525252; margin: 20px 0;"><b>DETAIL PEMESANAN</b></p>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <table align="left" border="0" cellpadding="0" cellspacing="0" style="">
                                        <tbody>
                                            <tr>
                                                <td width="160px" style="">
                                                    <p style=""><b>Nama Tamu</b></p>
                                                </td>
                                                <td width="480px" style="padding-left: 30px;">
                                                    <p style="">: <b>@Model.Pax[0].Title @Model.Pax[0].Name</b></p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="160px" style=""></td>
                                                <td width="480px" style="padding-left: 30px;">
                                                    <table style="margin-bottom: 20px;" align="left" border="0" cellpadding="0" cellspacing="0">
                                                        <tbody>
                                                            <tr>
                                                                <td width="160px" style="">
                                                                    <span style="color: #0c84b1;">Check-in</span>
                                                                </td>
                                                                <td width="160px" style="">
                                                                    <span style="">.........................</span>
                                                                </td>
                                                                <td width="160px" style="">
                                                                    <span style="color: #0c84b1;">Check-out</span>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td width="160px" style="">
                                                                    <span style="color: #15b1e4; font-size: 15px;"><b>@Model.HotelDetail.CheckInDate.ToString("D", CultureInfo.CreateSpecificCulture("id-ID"))</b></span>
                                                                </td>
                                                                <td width="160px" style=""></td>
                                                                <td width="160px" style="">
                                                                    <span style="color: #15b1e4; font-size: 15px;"><b>@Model.HotelDetail.CheckOutDate.ToString("D", CultureInfo.CreateSpecificCulture("id-ID"))</b></span>
                                                                </td>
                                                            </tr>
                                                            @*<tr>
                                                                    <td width="160px" style="">
                                                                        <span style="">14.00</span>
                                                                    </td>
                                                                    <td width="160px" style=""></td>
                                                                    <td width="160px" style="">
                                                                        <span style="">12.00</span>
                                                                    </td>
                                                                </tr>*@
                                                        </tbody>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="160px" style="">
                                                    <p style="color: #525252;">Tamu per Kamar</p>
                                                </td>
                                                <td width="480px" style="padding-left: 30px;">
                                                    <p style="">: @(Model.HotelDetail.Rooms[0].Rates[0].AdultCount + Model.HotelDetail.Rooms[0].Rates[0].ChildCount)</p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="160px" style="">
                                                    <p style="color: #525252;">Tipe Kamar</p>
                                                </td>
                                                <td width="480px" style="padding-left: 30px;">
                                                    <p style="">: @HotelService.GetInstance().GetHotelRoom(Model.HotelDetail.Rooms[0].RoomCode).RoomDescId @HotelService.GetInstance().GetHotelBoardDescId(Model.HotelDetail.Rooms[0].Rates[0].Boards)</p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="160px" style="">
                                                    <p style="color: #525252;">Jumlah Kamar</p>
                                                </td>
                                                <td width="480px" style="padding-left: 30px;">
                                                    <p style="">: @Model.HotelDetail.Rooms[0].Rates[0].RoomCount </p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="160px" style="">
                                                    <p style="color: #525252;">Termasuk Sarapan?</p>
                                                </td>
                                                <td width="480px" style="padding-left: 30px;">
                                                    @if (Model.HotelDetail.Rooms[0].Rates[0].Boards != "RO")
                                                    {
                                                        <p style=""> : Ya</p>
                                                    }
                                                    @if (Model.HotelDetail.Rooms[0].Rates[0].Boards == "RO")
                                                    {
                                                        <p style=""> : Tidak</p>
                                                    }

                                                </td>
                                            </tr>
                                            @if (Model.HotelDetail.SpecialRequest != null && Model.HotelDetail.SpecialRequest.Length != 0)
                                            {
                                                <tr>
                                                    <td width="160px" style="">
                                                        <p style="color: #525252;">Permintaan Khusus</p>
                                                    </td>
                                                    <td width="480px" style="padding-left: 30px;">
                                                        <p style="">: @Model.HotelDetail.SpecialRequest</p>
                                                    </td>
                                                </tr>
                                            }

                                            @if (Model.HotelDetail.IsRestaurantAvailable || Model.HotelDetail.IsWifiAccessAvailable)
                                            {
                                                <tr>
                                                    <td width="160px" style="">
                                                        <p style="color: #525252;">Fasilitas</p>
                                                    </td>
                                                    <td width="480px" style="padding-left: 30px;">
                                                        <p style="">
                                                            @if (Model.HotelDetail.IsWifiAccessAvailable)
                                                            {
                                                                <span><img style="padding-right: 5px" src="/Assets/images/wifi.png" alt="Alternate Text" />Wifi</span>
                                                            }
                                                            @if (Model.HotelDetail.IsRestaurantAvailable)
                                                            {
                                                                <span style="padding-left: 15px"><img style="padding-right: 5px" src="/Assets/images/swim.png" alt="Alternate Text" />Restoran</span>
                                                            }

                                                        </p>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</body>
</html>