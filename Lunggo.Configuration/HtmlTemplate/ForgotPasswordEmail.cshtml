@model Microsoft.AspNet.Identity.IdentityMessage
@using Lunggo.Framework.Config



<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
</head>
<body style="background-color:#F4F4F4; color:#535353; font-family:arial, helvetica, sans-serif; font-size:14px;">


    <table style="margin-left:auto; margin-right:auto; width:100%; max-width:700px; display:block; background:#ffffff;">
        <thead width="100%">
            <tr width="100%">
                <th width="5%"></th>
                <th width="90%" style="padding-top:30px;">
                    <p style="text-align:right;">
                        <a href="http://travorama.com" style="text-decoration:none;">
                            <img src="@(EnvVariables.Get("general", "rootUrl") + @"/Assets/images/travorama-logo-color.png")" alt="Travorama" />
                        </a>
                        <br />
                        <a href="https://www.facebook.com/travorama" style="text-decoration:none;">
                            <img src="@(EnvVariables.Get("general", "rootUrl") + @"/Assets/images/email-facebook.jpg")" alt="Travorama on Facebook" />
                        </a>
                        <a href="https://twitter.com/travoramaid" style="text-decoration:none;">
                            <img src="@(EnvVariables.Get("general", "rootUrl") + @"/Assets/images/email-twitter.jpg")" alt="Travorama on Twitter" />
                        </a>
                        <a href="https://instagram.com/travorama" style="text-decoration:none;">
                            <img src="@(EnvVariables.Get("general", "rootUrl") + @"/Assets/images/email-instagram.jpg")" alt="Travorama on Instagram" />
                        </a>
                    </p>
                </th>
                <th width="5%"></th>
            </tr>
        </thead>
        <tbody width="100%">
            <tr width="100%">
                <td width="5%"></td>
                <td width="90%">

                    <!-- CONTENT  -->

                    <p style="font-size: 12px">Dear <span style="color: #15b1e4">@Model.Destination, </span></p>
                    <p style="font-size: 12px">Anda telah mengajukan permohonan untuk reset password. Silahkan klik tombol berikut<br /> untuk reset password</p>

                    <table width="100%" style="border-top:1px solid #15b1e4 ; margin-top: 30px; margin-bottom: 20px">
                        <tr></tr>
                    </table>

                    <a style="background-color: #ffd632; border: #e9d14d; display: inline-block; margin-left:20%; text-decoration: none; font-family:arial, helvetica, sans-serif;
                            width: 60%; padding-top: 17px; padding-bottom: 17px; text-align: center; margin-top: 18px; margin-bottom: 18px; font-size: 11px; color: #333333;"
                       href="@Model.Body" target="_blank"><b>RESET PASSWORD</b></a>

                    <table width="100%" style="border-bottom:1px solid #15b1e4 ; margin-top: 10px; margin-bottom: 20px;">
                        <tr></tr>
                    </table>

                    <p style="font-size: 12px; opacity: 0.7">Jika Anda merasa tidak pernah meminta untuk menghubungkan akun tersebut, mohon abaikan email ini.</p>
                    <p style="font-size: 11px; font-style: italic; opacity: 0.7; margin-bottom: 40px">Harap tidak menginformasikan nomor kontak, alamat e-mail, atau password Anda kepada siapapun, termasuk pihak yang mengatasnamakan <b style="opacity: 0.9">Travorama</b>.</p>

                </td>
                <td width="5%"></td>
            </tr>
        </tbody>
        <tfoot width="100%">
            <tr>
                <td></td>
                <td style="padding-bottom:30px;">

                    <address style="font-style:normal; float:right; width:240px; margin-right:0; margin-left:auto; font-size:12px;">

                        <h4 style="color:#1daee5; margin-bottom:5px;">PT. Travel Madezy Internasional</h4>
                        <p style="margin-top:0; margin-bottom:5px;">
                            <span style="color:#1daee5;">A.</span> Equity Tower 25th Floor, SCBD lot 9<br />Jl. Jenderal Sudirman Kav.52-53<br />Jakarta 12190
                        </p>
                        <p style="margin-top:0;">
                            <!--<span style="color:#1daee5;">T.</span> 021 724 808 48-->
                        </p>

                    </address>

                </td>

                <td>
                </td>
                <td></td>
            </tr>
        </tfoot>
    </table>


</body>
</html>