@using System.Globalization
@using Lunggo.ApCommon.Constant
@using Lunggo.Framework.Environment.Variables
@model Lunggo.ApCommon.Hotel.Model.HotelReservationForDisplay
@{
    ViewBag.SiteHeader = "header-email";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
</head>
<body style="background-color:#F4F4F4; color:#535353; font-family:arial, helvetica, sans-serif; font-size:12px;">


    <table style="margin-left:auto; margin-right:auto; width:100%; max-width:700px; display:block; background:#ffffff;">
        <thead width="100%">
            <tr width="100%">
                <th width="5%"></th>
                <th colspan="2" width="90%" style="padding-top:30px;">
                    <p style="text-align:right;">
                        <a href="http://travorama.com" style="text-decoration:none;">
                            <img src="@(EnvVariables.Get("general", "rootUrl") + @"/Assets/images/travorama-logo-color.png")" alt="Travorama" />
                        </a>
                        <br />
                        <a href="https://www.facebook.com/travorama" style="text-decoration:none;">
                            <img src="@(EnvVariables.Get("general", "rootUrl") + @"/Assets/images/email-facebook.jpg")" alt="Travorama on Facebook" />
                        </a>
                        <a href="https://twitter.com/travoramaid" style="text-decoration:none;">
                            <img src="@(EnvVariables.Get("general", "rootUrl") + @"/Assets/images/email-twitter.jpg")" alt="Travorama on Twitter" />
                        </a>
                        <a href="https://instagram.com/travorama" style="text-decoration:none;">
                            <img src="@(EnvVariables.Get("general", "rootUrl") + @"/Assets/images/email-instagram.jpg")" alt="Travorama on Instagram" />
                        </a>
                    </p>
                </th>
                <th width="5%"></th>
            </tr>
        </thead>
        <tbody width="100%">
            <tr width="100%">
                <td width="5%"></td>
                <td colspan="2" width="90%">

                    <!-- CONTENT  -->
                    <p style="font-size:16px;"><b>Hi <span style="color: #15b1e4;">@EnumDisplay.Title(Model.Contact.Title) @Model.Contact.Name </span></b></p>
                    <span style="font-size:13px;">Terima kasih telah menggunakan <b>Travorama</b> untuk pemesanan Anda.</span>
                    <br /><br />
                    <p>
                        <b>Mohon Maaf</b>, pemesanan Anda gagal dikarenakan kesalahan sistem. Voucher Anda akan direfund secara otomatis setelah Anda menerima email ini
                        Anda dapat melakukan pemesanan ulang tiket di <span style="color: #15b1e4;">www.travorama.com</span> dengan pilihan hotel lain.
                    </p>

                    <p style="margin-bottom:10px;">Berikut Rincian Pemesanan Hotel Anda : </p>
                    <table width="100%" cellpadding="0" cellspacing="0" style="border-top: 2px dotted #15b1e4; margin-bottom: 4%; ">
                        <thead>
                            <tr>
                                <th colspan="6" solid=solid style="color: #15b1e4; border-bottom: 2px dotted; ">
                                    <p style="color: #15b1e4; text-align: left; margin: 7px 0; text-align: center;"><b>Rincian Pemesanan Hotel</b></p>
                                </th>
                            </tr>
                        </thead>
                    </table>
                    <table width="100%" style="margin-bottom: 20px">
                        <tbody>
                            <tr>
                                <td width="20%">
                                    <p style="">Nomor Pemesanan</p>
                                </td>
                                <td width="2%">
                                    <p style="">:</p>
                                </td>
                                <td width="78%">
                                    <p style=""><b>@Model.RsvNo</b></p>
                                </td>
                            </tr>
                            <tr>
                                <td width="20%">
                                    <p style="">Waktu.</p>
                                </td>
                                <td width="2%">
                                    <p style="">:</p>
                                </td>
                                <td width="78%">
                                    <p style=""><b>@Model.RsvTime.ToString("D", CultureInfo.CreateSpecificCulture("id-ID"))  &nbsp;-&nbsp; @Model.RsvTime.ToString("t", CultureInfo.CreateSpecificCulture("id-ID"))</b></p>
                                </td>
                            </tr>
                            <tr>
                                <td width="20%">
                                    <p style="">Detail Hotel</p>
                                </td>
                                <td width="2%">
                                    <p style="">:</p>
                                </td>
                                <td width="78%">
                                    <p style=""><b>@Model.HotelDetail.HotelName</b></p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p style="margin-bottom:30px;">
                        Mohon hubungi kami melalui email ke <span style="color: #15b1e4;">cs@travorama.com</span> apabila Anda belum menerima dana
                        refund selama 1 X 24 jam. Mohon maaf atas ketidaknyamanan dalam proses pemesanan Anda.
                    </p>

                </td>
                <td width="5%"></td>
            </tr>
            <tr width="100%">
                <td width="5%"></td>
                <td colspan="2" width="90%">
                    <table width="100%">
                        <tr>
                            <td width="30%" style="padding-bottom: 1em;"><h4 style="color:#15b1e4;"><b>Further Information: </b></h4></td>
                            <td style="text-align:left;padding-bottom:1em;" width="20%"><img src="@(EnvVariables.Get("general", "rootUrl") + @"/Assets/images/email/line.png")" />travorama</td>
                            <td colspan="2" style="text-align:left; padding-bottom:1em;"><img src="@(EnvVariables.Get("general", "rootUrl") + @"/Assets/images/email/mail.png")" />cs@travorama </td>
                            />
                        </tr>
                        <tr>
                            <td style="padding-bottom: 4em;" width="30%"><h4 style="color:#15b1e4;"><b>Follow Us On: </b></h4></td>
                            <td style="padding-bottom: 4em; text-align:left;" width="20%">
                                <img style="width:30px;height:30px;" src="@(EnvVariables.Get("general", "rootUrl") +@"/Assets/images/email-facebook.jpg")" /> travorama
                            </td>
                            />
                            <td style="padding-bottom: 4em; text-align:left" width="20%">
                                <img style="width:30px;height:30px;" src="@(EnvVariables.Get("general", "rootUrl") +@"/Assets/images/email-twitter.jpg")" /> twitter
                                />
                            </td>
                            <td style="padding-bottom: 4em; text-align:left"><img style="width:30px;height:30px;" src="@(EnvVariables.Get("general", "rootUrl") + @"/Assets/images/email-instagram.jpg" )" /> instagram</td>
                            />
                        </tr>
                    </table>
                </td>
                <td width="5%"></td>
            </tr>
        </tbody>
    </table>
</body>
</html>