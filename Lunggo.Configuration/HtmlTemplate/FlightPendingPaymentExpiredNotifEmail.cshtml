@using System.Globalization
@using Lunggo.Framework.Config
@model Lunggo.ApCommon.Flight.Model.FlightReservationForDisplay



<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
</head>
<body style="background-color:#F4F4F4; color:#535353; font-family:arial, helvetica, sans-serif; font-size:12px;">


    <table style="margin-left:auto; margin-right:auto; width:100%; max-width:700px; display:block; background:#ffffff;">
        <thead width="100%">
            <tr width="100%">
                <th width="5%"></th>
                <th width="90%" style="padding-top:30px;">
                    <p style="text-align:right;">
                        <a href="http://travorama.com" style="text-decoration:none;">
                            <img src="http://travorama-qa-cw.azurewebsites.net/Assets/images/travorama-logo-color.png" alt="Travorama" />
                        </a>
                        <br />
                        <a href="https://www.facebook.com/travorama" style="text-decoration:none;">
                            <img src="http://travorama-qa-cw.azurewebsites.net/Assets/images/email-facebook.jpg" alt="Travorama on Facebook" />
                        </a>
                        <a href="https://twitter.com/travoramaid" style="text-decoration:none;">
                            <img src="http://travorama-qa-cw.azurewebsites.net/Assets/images/email-twitter.jpg" alt="Travorama on Twitter" />
                        </a>
                        <a href="https://instagram.com/travorama" style="text-decoration:none;">
                            <img src="http://travorama-qa-cw.azurewebsites.net/Assets/images/email-instagram.jpg" alt="Travorama on Instagram" />
                        </a>
                    </p>
                </th>
                <th width="5%"></th>
            </tr>
        </thead>
        <tbody width="100%">
            <tr width="100%">
                <td width="5%"></td>
                <td width="90%">

                    <!-- CONTENT  -->

                    <p style="text-align: center;">Terima Kasih telah memilih Travorama.com</p>
                    <p style="text-align: center; color: #15b1e4; font-size: 15px;"><b>PEMESANAN DIBATALKAN</b></p>
                    <table width="70%" style="margin-left: 15%; background-color: rgba(21, 177, 228, 0.24); color: #15b1e4; border: 1px; border-style: solid; border-radius: 10px; margin-bottom: 5%;">
                        <tr>
                            <td style="">
                                <p style="padding-left: 1%; padding-right: 2%; font-size: 13px; text-align: center;">Anda telah melewati batas waktu pembayaran, silahkan kunjungi website <a style="color: #15b1e4;" href="Travorama.com">Travorama.com</a> untuk membuat pemesanan baru</p>
                            </td>
                        </tr>
                    </table>
                    <table width="100%" cellpadding="0" cellspacing="0" style="border-top: 3px #15b1e4 solid; margin-bottom: 4% ">
                        <thead>
                            <tr>
                                <th colspan="6" solid=solid style="color: #15b1e4; border-bottom: 3px solid; ">
                                    <p style="color: #15b1e4; text-align: left"><b>Flight Details</b></p>
                                </th>
                                <th colspan="6" solid=solid style="color: #15b1e4; border-bottom: 3px solid; padding-left: 5% ">
                                    <p style="color: #15b1e4; text-align: left"><b>No. Pemesanan : @Model.RsvNo</b></p>
                                </th>
                            </tr>
                        </thead>
                    </table>

                    @if (@Model.Itinerary.Trips.Count > 1)
                    {
                        <p style="color: #15b1e4;">(Roundtrip)</p>

                        <table width="100%">
                            <tr>
                                <td width="3%" style="padding-top: 1%; padding-left: 1%; vertical-align: top">
                                    <img src="http://travorama-qa-cw.azurewebsites.net/Assets/images/email/flight-departure-icon.png" />
                                </td>
                                <td width="8%">
                                    <img width="90%" height="40%" src="http://travorama-qa-cw.azurewebsites.net@(Model.Itinerary.Trips[0].Segments[0].AirlineLogoUrl)" />
                                    <p style="color: #15b1e4; margin-left: 12%; margin-top: -5%">Berangkat</p>
                                </td>
                                <td width="6%">
                                    <p style="text-align: center">:</p>
                                </td>
                                <td width="40%">
                                    <p style="color: #15b1e4;"><b>@Model.Itinerary.Trips[0].Segments[0].AirlineName - @Model.Itinerary.Trips[0].Segments[0].AirlineCode-@Model.Itinerary.Trips[0].Segments[0].FlightNumber</b></p>
                                    <p style="color: #15b1e4;">@Model.Itinerary.Trips[0].OriginAirport - @Model.Itinerary.Trips[0].DestinationAirport</p>
                                    <p style="color: #15b1e4;">@Model.Itinerary.Trips[0].DepartureDate.ToString("dddd"), @Model.Itinerary.Trips[0].DepartureDate.ToString("dd MMM yyyy", CultureInfo.CreateSpecificCulture("id-ID"))</p>
                                </td>
                            </tr>
                        </table>
                        <table width="100%">
                            <tr>
                                <td width="3%" style="padding-top: 1%; padding-left: 1%; vertical-align: top">
                                    <img src="http://travorama-qa-cw.azurewebsites.net/Assets/images/email/flight-return-icon.png" />
                                </td>
                                <td width="8%">
                                    <img width="90%" height="40%" src="http://travorama-qa-cw.azurewebsites.net@(Model.Itinerary.Trips[1].Segments[0].AirlineLogoUrl)" />
                                    <p style="color: #15b1e4; margin-left: 12%; margin-top: -5%">Kembali</p>
                                </td>
                                <td width="6%">
                                    <p style="text-align: center">:</p>
                                </td>
                                <td width="40%">
                                    <p style="color: #15b1e4;"><b>@Model.Itinerary.Trips[1].Segments[0].AirlineName - @Model.Itinerary.Trips[1].Segments[0].AirlineCode-@Model.Itinerary.Trips[1].Segments[0].FlightNumber</b></p>
                                    <p style="color: #15b1e4;">@Model.Itinerary.Trips[1].OriginAirport - @Model.Itinerary.Trips[1].DestinationAirport</p>
                                    <p style="color: #15b1e4;">@Model.Itinerary.Trips[1].DepartureDate.ToString("dddd"), @Model.Itinerary.Trips[1].DepartureDate.ToString("dd MMM yyyy", CultureInfo.CreateSpecificCulture("id-ID"))</p>
                                </td>
                            </tr>
                        </table>
                    }
                    else
                    {
                        <table width="100%">
                            <tr>
                                <td width="3%" style="padding-top: 1%; padding-left: 1%; vertical-align: top;">
                                    <img src="http://travorama-qa-cw.azurewebsites.net/Assets/images/email/flight-departure-icon.png" />
                                </td>
                                <td width="8%">
                                    <img width="90%" height="40%" src="http://travorama-qa-cw.azurewebsites.net@(Model.Itinerary.Trips[0].Segments[0].AirlineLogoUrl)" />
                                    <p style="color: #15b1e4; margin-left: 12%; margin-top: -5%">Berangkat</p>
                                </td>
                                <td width="6%">
                                    <p style="text-align: center">:</p>
                                </td>
                                <td width="40%">
                                    <p style="color: #15b1e4;"><b>@Model.Itinerary.Trips[0].Segments[0].AirlineName - @Model.Itinerary.Trips[0].Segments[0].AirlineCode-@Model.Itinerary.Trips[0].Segments[0].FlightNumber</b></p>
                                    <p style="color: #15b1e4;">@Model.Itinerary.Trips[0].OriginAirport - @Model.Itinerary.Trips[0].DestinationAirport</p>
                                    <p style="color: #15b1e4;">@Model.Itinerary.Trips[0].DepartureDate.ToString("dddd"), @Model.Itinerary.Trips[0].DepartureDate.ToString("dd MMM yyyy", CultureInfo.CreateSpecificCulture("id-ID"))</p>
                                </td>
                            </tr>
                        </table>

                    }

                </td>
                <td width="5%"></td>
            </tr>
        </tbody>
        <tfoot width="100%">
            <tr>
                <td></td>
                <td style="padding-bottom:30px;">

                    <address style="font-style:normal; float:right; width:240px; margin-right:0; margin-left:auto; font-size:12px;">

                        <h4 style="color:#1daee5; margin-bottom:5px;">PT. Travel Madezy International</h4>
                        <p style="margin-top:0; margin-bottom:5px;">
                            <span style="color:#1daee5;">A.</span> Equity Tower 25th Floor, SCBD lot 9<br />Jl. Jenderal Sudirman Kav.52-53<br />Jakarta 12190
                        </p>
                        <p style="margin-top:0;">
                            <span style="color:#1daee5;">T.</span> 021 724 808 48
                        </p>

                    </address>

                </td>

                <td>
                </td>
                <td></td>
            </tr>
        </tfoot>
    </table>


</body>
</html>