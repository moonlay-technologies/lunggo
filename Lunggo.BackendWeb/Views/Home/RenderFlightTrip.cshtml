@model Lunggo.Repository.TableRecord.FlightTripTableRecord

    <div class="showback">
        <h4>Trip Detail</h4>
        <hr />
        <table class="table table-hover table-no-border">
            <tbody>
                <tr>
                    <td>Booking Number</td>
                    <td>@Model.BookingNumber</td>
                </tr>
                <tr>
                    <td>Origin Airport</td>
                    <td>@Model.OriginAirportCd</td>
                </tr>
                <tr>
                    <td>Destination Airport</td>
                    <td>@Model.DestinationAirportCd</td>
                </tr>
                <tr>
                    <td>Adult</td>
                    <td>@Model.AdultCount</td>
                </tr>
                <tr>
                    <td>Child</td>
                    <td>@Model.ChildCount</td>
                </tr>
                <tr>
                    <td>Infant</td>
                    <td>@Model.InfantCount</td>
                </tr>
            </tbody>
        </table>
    </div>