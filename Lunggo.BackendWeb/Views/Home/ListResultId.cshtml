@model IEnumerable<Lunggo.BackendWeb.Query.GetSearchHotelRecord>

@{
    ViewBag.Title = "SearchResult";
    ViewBag.ActiveMenu = "SearchResult";
}



<h3><i class="fa fa-angle-right"></i> Search Result</h3>
<div class="row">

    <div class="col-md-12">
        <div class="content-panel">
            <h4><i class="fa fa-angle-right"></i> Search Result List</h4>
            <hr>
            <div ng-app="" ng-controller="customersController">

                <table class="table table-hover table-flight-booking">
                    <thead>
                        <tr>
                            <th class="number">#</th>
                            <th class="booking-number">Booking Number</th>
                            <th class="booking-reserve-name">Reserve Name</th>
                            <th class="booking-hotel">Hotel Id</th>
                            <th class="booking-hotel">Hotel Name</th>
                            <th class="booking-date">Booking Date</th>
                            <th class="booking-checkin">Checkin</th>
                            <th class="booking-checkout">Checkout</th>
                            <th class="booking-occupants">Room Occupants Name</th>
                            <th class="booking-status">Booking Status</th>
                            <th class="booking-FinalPrice">Total Price</th>
                            <th class="booking-PaymentMethodCd">Payment Method</th>
                            <th class="booking-PaymentStatusCd">Payment Status</th>
                            <th class="booking-action">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;

                            foreach (var item in Model)
                            {

                                var dateBooking = item.RsvTime.Value.ToString("yyyy MMMM dd");
                                var checkOut = item.CheckOutDate.Value.ToString("yyyy MMMM dd");
                                var checkIn = item.CheckInDate.Value.ToString("yyyy MMMM dd");

                                var status = item.RsvStatusCd;
                                var HotelName = "Ibis";
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => i)
                                    </td>
                                    <td>
                                        @Html.ActionLink(item.RsvNo, "HotelBookingDetail", new { rsvno = item.RsvNo })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HotelNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => HotelName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => dateBooking)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => checkIn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => checkOut)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GuestName)
                                    </td>
                                    <td class="booking-status">
                                        <span class="label label-success">@status</span>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FinalPrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PaymentMethodCd)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PaymentStatusCd)
                                    </td>
                                    <td class="booking-action">
                                        <a href="#" class="btn btn-xs btn-success"><span class="fa fa-check"> check</span></a>
                                        <a href="#" class="btn btn-xs btn-info"><span class="fa fa-eye"> view</span></a>
                                        <a href="#" class="btn btn-xs btn-danger"><span class="fa fa-trash"> delete</span></a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                    
                </table>

            </div>
        
        </div><!--/content-panel -->
    </div><!-- /col-md-12 -->

</div><!-- row -->
