@model Lunggo.ApCommon.Flight.Model.FlightTripForDisplay
@using System.Globalization

    <table class="table table-hover table-no-border">
        <tbody>
            <tr>
                <td>Asal</td>
                <td>:</td>
                <td>
                    @Model.OriginCity (@Model.OriginAirport)
                </td>
            </tr>
            <tr>
                <td>Tujuan</td>
                <td>:</td>
                <td>
                    @Model.DestinationCity (@Model.DestinationAirport)
                </td>
            </tr>
            <tr>
                <td>Tanggal Keberangkatan</td>
                <td>:</td>
                <td>
                    @Model.DepartureDate.GetValueOrDefault().ToString("dddd, d MMMM yyyy", CultureInfo.CreateSpecificCulture("id-ID"))
                </td>
            </tr>
            @{ Html.RenderPartial("RenderSegment", Model.Segments); }
        </tbody>
    </table>
