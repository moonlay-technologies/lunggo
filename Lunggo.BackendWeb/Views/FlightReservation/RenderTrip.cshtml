@using Lunggo.ApCommon.Autocomplete
@model Lunggo.Repository.TableRecord.FlightTripTableRecord

@{
    var dict = AutocompleteManager.GetInstance();
}

<div class="showback">
    <h4>Trip Detail</h4>
    <hr />
    <table class="table table-hover table-no-border">
        <tbody>
            <tr>
                <td>Booking No.</td>
                <td>@Model.BookingNumber</td>
            </tr>
            <tr>
                <td>Origin</td>
                <td>
                    @dict.AirportDict.First(x => x.Value.Code == Model.OriginAirportCd).Value.City
                    (@Model.OriginAirportCd)
                </td>
            </tr>
            <tr>
                <td>Destination</td>
                <td>
                    @dict.AirportDict.First(x => x.Value.Code == Model.DestinationAirportCd).Value.City
                    (@Model.DestinationAirportCd)
                </td>
            </tr>
            <tr>
                <td>Adult</td>
                <td>@Model.AdultCount</td>
            </tr>
            <tr>
                <td>Child</td>
                <td>@Model.ChildCount</td>
            </tr>
            <tr>
                <td>Infant</td>
                <td>@Model.InfantCount</td>
            </tr>
        </tbody>
    </table>
    <div class="flipped" id="trip-detail">
        <table class="table table-hover table-no-border">
            <tbody>
                <tr>
                    <td>Final Price</td>
                    <td>@Model.FinalPrice.GetValueOrDefault().ToString("Rp0,0")</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="flipper" id="trip-detail" align="center">
        Show More
    </div>
</div>
